@import "partials/web-partials";

.header {
  background-color: $brand-primary;
  border: solid 0.5px $brand-primary;
  color: $white;
  font-size: 12px;
  height: 70px;
  padding: 4px 54px;

  .nav {
    margin-left: 50px;

    .nav-btn {
      color: $white;
      font-size: 12px;
    }

    .menu {
      a {
        color: $text-dark-grey;
        font-size: 12px;
      }
    }
  }

  .login-btn-area {
    min-width: 90px;
    text-align: center;
    border-radius: 6px;
    border: solid 1.5px $white;
    margin: 0 12px;

    .text {
      line-height: 35px;
    }
  }

  .signup-btn-area {
    min-width: 90px;
    text-align: center;
    border-radius: 6px;
    background-color: $brand-secondary;
    margin: 0 12px;

    .text {
      line-height: 35px;
    }
  }
}

.footer {

  .top {
    background-color: $footer;
    padding: 0 54px;
    font-size: 12px;
    color: $white;
  }

  .bottom {
    background-color: #2f5871;
    padding: 50px 54px;

    a {
      color: $white;
    }

    .md-list-item {
      font-size: 12px;
      color: $white;
      height: 24px;
      padding: 0;

    }

    .section-title {
      font-size: 12px;
      color: $white;
      height: 24px;
      padding: 0;
    }
  }
}

.clickable {
  cursor: pointer;
}
.clickable:hover {
  cursor: pointer;
}

.fund-card {
  margin-bottom: 5px;
  width: 95%;
}

.fund-card-item {
  padding-left: 10px;
  text-align: center;
}

.fc-divider {
  padding: 20px 0;
  text-align: center;
  font-size: 18px;
  /*&:before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    border-bottom: 1px solid #979797;
  }*/
}

.grey-back {
  border-radius: 2px;
  background-color: $light-grey;
}

.wrapper {
  margin: auto;
  max-width: 1280px;
}

.fc-body {
  min-height: 78vh;
  margin-bottom: 50px;
}

//loading icon for delay in load
.loading {
  width: 50%;
  margin: auto;
  text-align: center;
  img {
    height: 25px;
    width: 25px;
  }
}

.star {
  color: $material-accent;
}

hr {
  margin: 5px 0;
  border: 0;
  border-top: 1px solid $medium-grey;
}