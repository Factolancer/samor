<div class="row wrapper">
    <div class="col-sm-10 col-sm-offset-1">
        <app-user-journey></app-user-journey>
        <div class="row">
            <div class="col-sm-12 center-align heading-32-blue pad-tb-15">Investment Summary</div>
        </div>

        <div class="row">
            <div class="col-sm-8">
                <div class="row  grey-back pad-tb-20 mar-tb-20" *ngIf="sipProducts.length>0">
                    <div class="col-sm-12">
                        <md-card class="checkout-product-head">
                            <div class="row">
                                <div class="col-sm-6 left-align">
                                    Fund
                                </div>
                                <div class="col-sm-2">
                                    Monthly SIP Date
                                </div>
                                <div class="col-sm-2">
                                    SIP Tenure
                                </div>
                                <div class="col-sm-2">
                                    Investment Amount
                                </div>
                            </div>
                        </md-card>
                    </div>
                    <div *ngFor="let product of sipProducts">
                        <div class="col-sm-12">
                            <!-- <span class="heading-18">{{productEnum[product.productName]}}</span>-->
                        </div>
                        <div class="col-sm-12">
                            <md-card class="checkout-product-item">
                                <div *ngFor="let fundItem of product.funds">
                                    <div class="row fund">
                                        <div class="col-sm-6 left-align">
                                            {{fundItem.name}}
                                        </div>
                                        <div class="col-sm-2">
                                            <md-icon class="material-icons md-14">&#xE88E;</md-icon>
                                            {{fundItem.startDate}}
                                        </div>
                                        <div class="col-sm-2">{{fundItem.months}}</div>
                                        <div class="col-sm-2">{{fundItem.investmentAmount |
                                            currency:'INR':true:'1.0-0'}}
                                        </div>
                                    </div>
                                </div>
                            </md-card>
                        </div>
                    </div>
                </div>

                <div class="row  grey-back pad-tb-20 mar-tb-20" *ngIf="lumpsumProducts.length>0">
                    <div class="col-sm-12">
                        <md-card class="checkout-product-head">
