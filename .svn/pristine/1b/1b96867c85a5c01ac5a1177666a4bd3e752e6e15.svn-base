@import "../../styles/partials/web-partials";

.fund-name {
  font-weight: 700;
  color: $brand-secondary;
}

.product-card {

  padding: 0;
  margin-bottom: 10px;
  .card-head {
    background-color: $brand-secondary;
    font-size: 24px;
    color: $white;
    padding: 15px 0;
    text-align: center;
  }

  .list-item {
    padding: 10px 0;

    .list-icon {
      width: 45px;
      height:auto;
      border-radius: 50%;
      margin-right: 20px;
    }
  }

  .card-foot {
    text-align: center;
    padding: 10px 25%;
  }

}

.calc-text {
  text-align: center;
  font-size: 24px;
  color: $text-dark-grey;

  a {
    color: $brand-secondary;
  }
}

