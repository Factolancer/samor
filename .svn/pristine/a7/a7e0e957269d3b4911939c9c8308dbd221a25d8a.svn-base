@import "../../../styles/styles";

.filter-title {
  font-size: 14px;
  font-weight: 500;
  line-height: 36px;
}

.explore-fund-head {
  background-color: $brand-secondary;
  text-align: center;
  color: $white;
  font-size: 12px;
  font-weight: 700;
  padding: 20px;
  margin-bottom: 2px;
  border-radius: 0;
}

.filter-data {
  font-size: 11px;
  padding: 12px;
  border-radius: 0;
}

.filter-clear {
  font-size: 12px;
  font-weight: 700;
  color: $dark-grey;
  padding: 3px;
  margin: 0 0 5px 0;
}

.clear-icon {
  background-color: $light-grey;
}

.fc-chip {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  line-height: 14px;
  background-color: $light-grey;
  color: $dark-grey;
  margin: 2px;

  &:hover {
    cursor: pointer;
  }

  &:focus {
    outline: none !important;
  }
}

.fc-remove-all-chip {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  line-height: 14px;
  background-color: $medium-grey;
  color: $text-dark-grey;
  margin: 2px;

  &:hover {
    cursor: pointer;
  }

  &:focus {
    outline: none !important;
  }
}

md-checkbox {

  font-size: 12px;

  /deep/ .md-checkbox-layout {

    padding: 2px 0;

    .md-checkbox-inner-container {
      height: 15px;
      width: 15px;

      .md-checkbox-frame {
        border: 1px solid;
      }
    }

    .md-checkbox-label {
      line-height: 15px;
    }
  }
}

md-radio-group {
  /deep/ md-radio-button {

    padding: 2px;

    .md-radio-container {
      box-sizing: border-box;
      display: inline-block;
      height: 16px;
      position: relative;
      width: 18px;
      top: 0;

      .md-radio-inner-circle, .md-radio-outer-circle {
        box-sizing: border-box;
        height: 15px;
        left: 0;
        top: 5px;
        width: 15px;
        position: absolute;
      }

    }

    .md-radio-label-content {
      padding-left: 3px;
    }

  }
}
