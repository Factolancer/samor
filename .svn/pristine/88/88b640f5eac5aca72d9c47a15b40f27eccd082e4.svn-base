@import "../../public/styles/partials/web-partials";
.check-kyc-dialog {
  margin: -24px;

  .check-kyc-header {
    background-color: $brand-secondary;
    color: $white;
    @include heading(24px, 400);
    width: 100%;
    line-height: 80px;
    text-align: center;
    margin-bottom: 0;
    letter-spacing: 1.8px;
  }
  .kyc-non-compliant {

    md-card{
      background-color: $error;
      padding:15px;
      color:white;
    }
    .material-icons{
      color:$error;
    }
  }
  .kyc-compliant{
   md-card{
     background-color: $success;
     padding:15px;
     color:white;
   }
    .material-icons{
      color:$success;
    }
  }

  .validPhone{
    display: none;
  }

  .check-pan-button, .submit-otp-button, .send-otp-button{
    background-color: $brand-secondary;
    color: $white;
    text-align: center;
  }

}