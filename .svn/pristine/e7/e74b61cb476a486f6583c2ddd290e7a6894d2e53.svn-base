@import "../../styles/partials/web-partials";
//fund list styling

.explore-fund-head {
  background-color: $brand-secondary;
  text-align: center;
  color: $white;
  font-size: 12px;
  font-weight: 700;
  padding: 20px;
  margin-bottom: 2px;
  border-radius: 0;
}
.explore-fund-head-m {
  background-color: rgba(100, 100, 100, 0.5);
  text-align: center;
  color: #000000;
  font-size: 14px;
  padding: 10px;
  position: fixed;
  z-index: 2;
  height: 100%;
  width: 90.5%;
  .names{
    overflow-y: scroll;
    max-width: 50vw;
    max-height: 300px;
    margin: 10% auto 0;
    background-color: white;
    .title{font-size: 16px;
      border-bottom: 1px solid $medium-grey;
      width:100%;
      padding: 10px 0;
    }
    .clickable{
      padding: 5px;
    }

  }
  .active-sort{
    color: $brand-secondary;
  }
  hr{width: 65%;}
}

.loading {
  font-size: 24px;
}

.fund-list {
  font-size: 14px;
  text-align: center;
  padding: 12px;
  margin-bottom: 2px;
  border-radius: 0;
}
.fund-list-m{
  margin-bottom: 10px;
}

//pagination styling
.page-number-btn {
  background-color: $white;
  color: $brand-secondary;
  margin: 0 0 0 0;
  text-align: center;
  padding: 0 15px;
  border: 0;
  height: 25px;
}

.blue {
  background-color: $brand-secondary;
  color: $white;
}
.white{
  color: $white;
}
.mgray{
  color: $medium-grey;
}
.grey {
  color: $dark-grey;
}
.bg-lgray{
  background-color: #f7f6f6;
}
.bg-bs{
  background-color: $brand-secondary;
}
.filter-icon{
  height: 16px;
  width: 16px;
  margin-bottom: -3px;
}
.tabactive {
  transition: 0.33s all ease-in;
  background-color: $brand-secondary;
  color: white;
  img{
    filter: brightness(200%);
  }
}

table, tr, td {
  border: 1px solid $dark-grey;
}

table {
  border-collapse: collapse;
}

//search component styling

.search-bar {
  padding: 35px 0 20px 0;
}
.search-bar-m{
  padding: 15px 0 5px 0;
}

.search-input {
  /*border: solid 1px $dark-grey;
  line-height: 35px;
  padding-left: 10px;*/
  font-size: 14px;
  width: 100%;
}

.search-btn {
  /*border-radius: 0 !important;
  height: 35px;*/
  border: 1px Solid $medium-grey;
  font-size: 10px;
  padding: 2px 10px;
  letter-spacing:1px;
  margin-top:2px;
  color: $medium-grey;
  border-radius: 2px;

  /*&:hover {
    background-color: $brand-secondary;
    color: $white;
    border: 1px Solid $brand-secondary;
  }*/

  &:hover {
    color: $brand-secondary;
    border: 1px Solid $brand-secondary;
  }
}

.page-heading {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 14px;
  line-height: 16px;
  background-color: $brand-primary;
  color: $white;

  &:focus {
    outline: none !important;
  }
}

.fund-count {
  font-size: 12px;
}

.cart-button {
  position: fixed;
  bottom: 20px;
  right: 15px;
  z-index: 1000;
  float: right;
  margin: 10px;
}

.comparison-button {
  position: fixed;
  bottom: 20px;
  right: 15px;
  z-index: 1000;
  float: right;
  margin: 10px;
}

.comparison-list {
  position: fixed;
  bottom: 20px;
  right: 15px;
  z-index: 999;
  background-color: $white;
  width: 320px;
  box-shadow: 0 3px 1px -2px rgba(0, 0, 0, .2), 0 2px 2px 0 rgba(0, 0, 0, .14), 0 1px 5px 0 rgba(0, 0, 0, .12);
  transition: box-shadow 280ms cubic-bezier(.4, 0, .2, 1);
  will-change: box-shadow;
  font-size: 12px;

  .top-bar {
    padding: 10px;
    background-color: $light-grey;
    border-bottom: solid 1px $medium-grey;
  }

  .list-text {
    padding: 10px;
    font-size: 14px;
    font-weight: 400;
    color: $text-dark-grey;

    &:hover {
      background-color: $light-grey;
    }
  }

  .remove-button {
    color: $text-medium-grey;
  }
}

.watchlist-icon-btn {
  color: $text-medium-grey;
  line-height: 30px;
  height: 36px;
  width: 36px;
  margin-left: 10px;
}

.md-button-toggle-label-content {
  line-height: 20px !important;
}

.no-result-found {

  padding: 40px 0;

  .body {
    background-color: $light-grey;
    padding: 50px 10px;

    .line-1 {
      &:first-of-type {
        font-size: 40px;
      }
      color: $text-dark-grey;
      letter-spacing: 3px;
      font-size: 35px;
    }
    .line-1-m {
      &:first-of-type {
        font-size: 25px;
      }
      color: $text-dark-grey;
      letter-spacing: 2px;
      font-size: 20px;
    }

    .line-2 {
      color: $text-medium-grey;
      font-size: 16px;
      font-weight: 300;
      font-style: italic;
    }

    .image {
      text-align: center;
      max-width: 150px;
    }
    .image-m {
      text-align: left;
      img {
        max-width: 70px;
      }
    }
  }

  .grey-foot {
    height: 50px;
    background-color: $medium-grey;
  }
}

