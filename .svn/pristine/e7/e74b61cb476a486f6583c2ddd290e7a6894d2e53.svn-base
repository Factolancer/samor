md-checkbox {

  font-size: 12px;

  /deep/ .mat-checkbox-layout {

    padding: 2px 0;

    .mat-checkbox-inner-container {
      height: 15px;
      width: 15px;

      .mat-checkbox-frame {
        border: 1px solid;
      }
    }

    .mat-checkbox-label {
      line-height: 12px;
    }
  }
}

md-button-toggle-group {
  /deep/ .mat-button-toggle-label-content {
    line-height: 18px;
    padding: 0 12px;
  }
}

/deep/ .mat-autocomplete-panel {
  max-height: 80vh;
  max-width: 1024px;

  md-option {
    &.mat-option {
      padding: 0 10px;
      line-height: 24px;
      height: 24px;
      font-size: 12px;
    }
  }
}
