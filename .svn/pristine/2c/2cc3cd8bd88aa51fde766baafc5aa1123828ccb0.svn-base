<div fxLayout="column" fxLayoutAlign="center center ">
    <md-card class="mar-tb-5 report-card no-padding">
        <div fxLayout="row" fxLayoutAlign="center center" class="summary-heading">
            <div fxFlex="50">Mutual Fund Holdings as on {{currentDate|date:'dd/MM/yyyy'}}</div>
        </div>
        <div fxLayout="row" fxLayoutAlign="center center">
            <div fxFlex>
                <hr>
            </div>
        </div>
        <div fxLayout="row" fxLayoutAlign="center center" class="allocation-header mar-tb-20 pad-lr-20">
            <div fxFlex="25">
                Scheme
            </div>
            <div fxFlex class="center-align">
                Folio No.
            </div>
            <div fxFlex class="center-align">
                Cost Value (Rs.)
            </div>
            <div fxFlex class="center-align">
                Units
            </div>
            <div fxFlex class="center-align">
                Current NAV/Price (Rs.)
            </div>
            <div fxFlex class="center-align">
                NAV Date
            </div>
            <div fxFlex class="center-align">
                Current Value (Rs.)
            </div>
            <div fxFlex class="center-align">
                Realized Gain/Loss (Rs.)
            </div>
            <div fxFlex class="center-align">
                Unrealized Gain/Loss (Rs.)
            </div>
            <div fxFlex class="center-align">
                <span mdTooltip="Accounting Realized and Unrealized gains">Absolute Return(%)</span>
            </div>
        </div>
    </md-card>
    <md-card class="mar-tb-5 report-card no-padding">
        <div *ngFor="let fund of funds; let i = index;">
            <div *ngIf="i < funds.length - 1" fxLayout="row" fxLayoutAlign="center center" class="focus">
                <div fxFlex class="report-card">
                    <div fxLayout="row" fxLayoutAlign="center center" class="mar-tb-20 pad-lr-20">
                        <span fxFlex="25" class="asset-class fundName" >
                            <span (click)="showTransactionDetails(fund.id)">{{fund.name}}</span>
                        </span>
                        <span fxFlex class="center-align">
                            {{fund.folioNo}}
                        </span>
                        <span fxFlex class="center-align">
                            {{fund.costValue | number : '1.2-2'}}
                        </span>
                        <span fxFlex class="center-align">
                            {{fund.units | number : '1.3-3'}}
                        </span>
                        <span fxFlex class="center-align">
                            {{fund.currNav | number : '1.4-4'}}
                        </span>
                        <span fxFlex class="center-align">
                            {{fund.navDate | date : 'dd-MM-yyyy'}}
                        </span>
                        <span fxFlex class="center-align">
                            {{fund.currValue | number : '1.2-2'}}
                        </span>
                        <span fxFlex class="center-align">
                            {{fund.realizedGain | number : '1.2-2'}}
                        </span>
                        <span fxFlex class="center-align">
                            {{fund.unrealizedGain | number : '1.2-2'}}
                        </span>
                        <span fxFlex class="center-align">
                            {{fund.absoluteReturn | number : '1.2-2'}}
                        </span>
                    </div>
                </div>
            </div>
            <div *ngIf="i == funds.length - 1" fxLayout="row" fxLayoutAlign="center center" class="lastRow">
                <div fxFlex class="report-card">
                    <div fxLayout="row" fxLayoutAlign="center center" class="mar-tb-20 pad-lr-20">
                        <span fxFlex="25" class="asset-class">{{fund.name}}</span>
                        <span fxFlex class="asset-class center-align">{{fund.folioNo}}</span>
                        <span fxFlex class="asset-class center-align">{{fund.costValue | number : '1.2-2'}}</span>
                        <span fxFlex class="asset-class center-align">{{fund.units | number : '1.3-3'}}</span>
                        <span fxFlex class="asset-class center-align">{{fund.currNav | number : '1.4-4'}}</span>
                        <span fxFlex class="asset-class center-align">{{fund.navDate}}</span>
                        <span fxFlex class="asset-class center-align">{{fund.currValue | number : '1.2-2'}}</span>
                        <span fxFlex class="asset-class center-align">{{fund.realizedGain | number : '1.2-2'}}</span>
                        <span fxFlex class="asset-class center-align">{{fund.unrealizedGain | number : '1.2-2'}}</span>
                        <span fxFlex class="asset-class center-align">{{fund.absoluteReturn | number : '1.2-2'}}</span>
                    </div>
                </div>
            </div>
        </div>
    </md-card>
</div>