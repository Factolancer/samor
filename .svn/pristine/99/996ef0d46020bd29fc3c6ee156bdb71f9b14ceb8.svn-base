<div fxLayout="row" fxLayoutAlign="center" class="product-feature-container pad-tb-20">
  <div fxFlex="90">

    <div align="center" class="sub-heading pad-tb-10">PRODUCT FEATURES</div>
    <div fxLayout="row" fxLayoutAlign="center">
      <div *ngFor="let prodFeature of productFeatures" class="prod-feature mar-25" fxFlex="40" fxLayout="row" fxLayoutAlign="center">
        <div style="max-width: 100px">
          <img src={{prodFeature.image}}>
          <p>{{prodFeature.content}}</p>
        </div>
      </div>
    </div>

  </div>
</div>