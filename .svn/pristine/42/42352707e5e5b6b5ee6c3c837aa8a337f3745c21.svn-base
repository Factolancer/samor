@import "../../../public/styles/partials/web-partials";

.product-container{
  border: solid 1px #d6d6d6;
  margin-bottom: 20px;
  .title{
    background-color: $light-grey;
    padding: 10px;text-align: center;font-size: 20px;
    border-bottom: solid 1px #d6d6d6;
  }
  md-card{padding:0 0 20px;margin:20px; border: solid 0.5px #d6d6d6;
    md-card-title{background-color: $brand-primary;color:$white;font-weight: 500;padding: 10px;font-size: 18px;};
    md-card-content{padding:5px 20px; font-size: 12px;}
    button.invest-button{
      margin: 10px 0 20px;
      &:hover{background-color: $brand-secondary;}
    };
  }
  i{margin-bottom: 10px;}
}
