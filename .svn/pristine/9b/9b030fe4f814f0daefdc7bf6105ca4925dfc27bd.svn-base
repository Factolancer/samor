@import "../../styles/partials/web-partials";

.fund-name {
  font-weight: 700;
  color: $brand-secondary;
}

.product-card {

  padding: 0;

  .card-head {
    background-color: $brand-secondary;
    font-size: 24px;
    color: $white;
    padding: 15px 0;
    text-align: center;
  }

  .list-item {
    padding: 10px 0;

    .list-icon {
      width: 52px;
      height: 52px;
      border-radius: 50%;
      margin-right: 20px;
    }
  }

  .card-foot {
    text-align: center;
    padding: 10px 25%;
  }

}

.calc-text {
  text-align: center;
  font-size: 24px;
  color: $text-dark-grey;

  a {
    color: $brand-secondary;
  }
}

.elss-explanation {
  margin-top: 50px;
  margin-bottom: 50px;
  background-color: $white;
  border: solid 1px $dark-grey;

  .title {
    background-color: $brand-secondary;
    color: $white;
    font-size: 18px;
    text-align: center;
  }

  .feature-card {
    text-align: center;
    color: $dark-grey;
    margin: 25px 0;

    .elss-title {
      background-color: $dark-grey;
      color: $white;
      font-weight: 700;
    }

    .other-title {
      background-color: $light-grey;
      color: $brand-secondary;
      font-weight: 700;
    }
  }
}

.calc-box {
  border: solid 1px $medium-grey;

  .calc-title {
    line-height: 80px;
    font-size: 26px;
    font-weight: 400;
    background-color: $brand-secondary;
    color: $white;
    text-align: center;
  }

  .calc-sub-title {
    font-size: 20px;
    color: $text-dark-grey;
    text-align: center;
    letter-spacing: 2px;
  }

  .completeTherm {
    background-color: #0ADAC2;
    min-height: 10px;
    border-radius: 2px;
  }

  .remainingTherm {
    background-color: $light-grey;
    min-height: 10px;
    border-radius: 2px;
  }

  .completeThermText {
    color: #0ADAC2;
    text-align: right;
  }

  .remainingThermText {
    color: $material-warn;
    text-align: right;
  }

  .question-area {
    background-color: $light-grey;
    margin: 20px;
    padding: 20px;

    .card {
      min-height: 150px;
      padding: 20px;

      .sub-title {
        font-size: 12px;
        font-weight: 700;
      }

      .elss-img {
        background-image: url('../../assets/img/tax/calc/elss.svg');
        background-size: cover;
      }

      .pf-img {
        background-image: url('../../assets/img/tax/calc/pf.svg');
        background-size: cover;
      }

      .lic-img {
        background-image: url('../../assets/img/tax/calc/lic.svg');
        background-size: cover;
      }

      .fd-img {
        background-image: url('../../assets/img/tax/calc/fd.svg');
        background-size: cover;
      }

      .nsc-img {
        background-image: url('../../assets/img/tax/calc/nsc.svg');
        background-size: cover;
      }

      .scss-img {
        background-image: url('../../assets/img/tax/calc/scss.svg');
        background-size: cover;
      }

      .sukanya-img {
        background-image: url('../../assets/img/tax/calc/sukanya.svg');
        background-size: cover;
      }

      .ulip-img {
        background-image: url('../../assets/img/tax/calc/ulip.svg');
        background-size: cover;
      }

    }

    .title {
      color: $text-dark-grey;
    }

    .salary {
      background-color: $white;
      border-radius: 2px;
      border: solid 1px $brand-primary;
    }

    ul li {
      margin: 5px;
      color: $text-medium-grey;
      font-size: 10px;
    }

    p {
      margin: 15px 0;
      color: $text-medium-grey;
      font-size: 10px;
    }

    .salary-error {
      color: $material-warn;
      font-size: 12px;
    }
  }

  .results-area {
    border: solid 1px $dark-grey;
    margin: 20px;
    padding: 20px;

    .title {
      color: $text-dark-grey;
      font-size: 18px;
      letter-spacing: 2px;
      text-align: center;
      padding: 15px;
    }

    .curr-inv {
      background-color: #0adac2;
      color: $white;
      text-align: center;
      padding: 20px;
      margin: 5px;
      font-weight: 700;
    }

    .amount-area {
      text-align: center;
      margin: 5px;
      font-weight: 700;

      .amount-title {
        color: $white;
        font-size: 14px;
        background-color: $brand-secondary;
        padding: 20px;
      }

      .amount {
        color: $text-dark-grey;
        background-color: $light-grey;
        padding: 20px;
      }
    }
  }
}