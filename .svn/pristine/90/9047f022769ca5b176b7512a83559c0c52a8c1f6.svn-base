//***********************IMPORTS********************************
@import url('https://fonts.googleapis.com/icon?family=Material+Icons');
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,700');
@import 'partials/web-partials';
@import "fincash-blue";
@import "web";

//***********************MATERIAL ICONS SIZES********************************

.factsheet-icon {
  color: $brand-secondary;
}

// Rules for using icons as black on a light background.
.material-icons {
  vertical-align: middle;

  &.md-dark {
    color: rgba(0, 0, 0, 0.54);
    &.md-inactive {
      color: rgba(0, 0, 0, 0.26);
    }
  }

  &.md-light {
    color: rgba(255, 255, 255, 1);
    .md-inactive {
      color: rgba(255, 255, 255, 0.3);
    }
  }

  &.md-brand-secondary {
    color: $brand-secondary;
  }

  &.md-green {
    color: $green;
  }
}

@for $i from 1 to 12 {
  .material-icons.md-#{8 + ($i*2)} {
    font-size: 8px + ($i*2);
    height: 8px + ($i*2);
    width: 8px + ($i*2);
  }
}

@for $i from 1 to 4 {
  .material-icons.md-#{12 * ($i+1)} {
    font-size: 12px * ($i+1);
    height: 12px * ($i+1);
    width: 12px * ($i+1);
  }

}

/**************** txt-size***************************/
@for $i from 1 to 42 {
  .txt-#{1*($i)} {
    font-size: 1px * ($i) !important;
  }

}

//***********************ALIGN********************************
.left-align {
  text-align: left;
}

.right-align {
  text-align: right;
}

.center-align {
  text-align: center;
}
.justify-content{
  text-align: justify;
}

.float-right {
  float: right;
}

//***********************position********************************
.pos-rel{position: relative;}
.pos-abs{position: absolute;}

//***********************form********************************
input.upper { text-transform: uppercase; }
.form-error {
  color: $material-warn;
  font-size: 75%;
  font-weight: 400;
}
.error{
  @include fadeInElement(0.3s);
  color: $error;}
.success{
  @include fadeInElement(0.3s);
  color:$success;}
//***********************padding & margins********************************

.no-padding {
  padding: 0 !important;
}

.no-margin {
  margin: 0 !important;
}

.no-border {
  border: none !important;
  border-radius: 0 !important;
  border-collapse: inherit;
}

.grey-border {
  border: 0.5px solid $medium-grey;
}

.grey-border-lr {
  border-left: 0.2px solid $medium-grey;
  border-right: 0.2px solid $medium-grey;
}

@for $i from 1 to 17 {
  .pad-#{5 * $i} {
    padding: 5px * $i !important;
  }

  .pad-tb-#{5 * $i} {
    padding-top: 5px * $i !important;
    padding-bottom: 5px * $i !important;
  }

  .pad-lr-#{5 * $i} {
    padding-left: 5px * $i !important;
    padding-right: 5px * $i !important;
  }

  .pad-t-#{5 * $i} {
    padding-top: 5px * $i !important;
  }

  .pad-b-#{5 * $i} {
    padding-bottom: 5px * $i !important;
  }

  .mar-#{5 * $i} {
    margin: 5px * $i !important;
  }

  .mar-tb-#{5 * $i} {
    margin-top: 5px * $i !important;
    margin-bottom: 5px * $i !important;
  }

  .mar-lr-#{5 * $i} {
    margin-left: 5px * $i !important;
    margin-right: 5px * $i !important;
  }

  .mar-t-#{5 * $i} {
    margin-top: 5px * $i !important;
  }

  .mar-b-#{5 * $i} {
    margin-bottom: 5px * $i !important;
  }
  .mar-r-#{5 * $i} {
    margin-right: 5px * $i !important;
  }
  .mar-l-#{5 * $i} {
    margin-left: 5px * $i !important;
  }
}

