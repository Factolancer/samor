@import "../../../styles/partials/web-partials";


.container {
  @include fadeInElement(1.5s);
  max-width: 40%;
  margin: 50px auto;
}
.aadhar-kyc-container{border: solid 0.5px $medium-grey;}
.aadhar-kyc-header{
  background-color: $brand-secondary;
  color: $white;
  @include heading(24px, 400);
  width: 100%;
  line-height: 60px;
  text-align: center;
  margin-bottom: 0;
    letter-spacing: 1.8px;
}
 .aadhar-form {
  border: solid 0.5px $medium-grey;
  margin-bottom: 20px;
  .heading{
    background-color: $light-grey;
    border-bottom: solid 0.5px $medium-grey;
    text-align: center;
    padding: 10px 0;
  }
}

.aadhar-kyc-content{
  padding:20px 40px;
}
.aadhar-form form{
  padding-bottom: 20px;
}
button{
  background-color: $brand-secondary;
  color: $white;
}
 .kyc-non-compliant.active {

    md-card{
      background-color: $error;
      padding:15px;
      color:white;
    }
    .material-icons{
      color:$error;
    }
  }
  .kyc-non-compliant.disabled {
    md-card{
      background-color: $medium-grey;
      padding:15px;
      color:white;
    }
    .material-icons{
      color:black;
    }
  }

  .kyc-status{
    @include dropElement(1s, ease-out, 0s, 1, -50%, 0);
    background-color: $light-grey;
    padding-top:20px;
    padding-bottom: 10px;
    .text{color:$dark-grey}
    .success{color:$success;}
    .error{color: $error;}
  }

  .adhaar-enquiry-box{

    @include dropElement(1s, ease-out, 0s, 1, -50%, 0);
    background-color: $light-grey;
    margin-bottom: 0;
    padding: 15px;
    .adhaar-enquiry-text{
      color: black;
      font-size: 16px;
      font-weight:bold;
      width: 100%;
      margin-bottom: 20px;
      .disclaimer {
        width: 436px;
        height: 13px;
        font-size: 11px;
        font-weight: normal;
        line-height: normal;
        letter-spacing: 1.2px;
        color: $dark-grey;
      }
    }
    .yes-button{
      background-color: $brand-secondary;
      border: solid 0.5px #979797;
      padding: 5px 25px;
      font-size: 14px;
      color:$white;
      cursor: pointer;
    }
    .no-button{
      background-color: $medium-grey;
      @extend .yes-button;
    }
  }


.mobile-registered-box{
  @include fadeInElement(0.5s);
  .content{
    padding: 20px;
    text-align: center;
    .highlight{font-size: 1.5em; margin: 10px 0 5px;}
    .message{margin: 2px 0;}
    .mobile-icon{
      color: $success;
      font-size: 50px;
    }
    .check-icon{color: $success;}
  }
}

.next-step{margin-top:20px;}

.resLoading{
  background: url('../../../assets/img/loading.gif');
  background-size: 25px 25px;
  background-repeat: no-repeat;
  background-position-x: 50%;
  background-position-y: 50%;
}

.vis-hidden{
  visibility: hidden;
}
.error{
  @include fadeInElement(0.3s);
  color: $error;
}

.disclaimer {
  height: 13px;
  font-size: 11px;
  font-weight: normal;
  line-height: normal;
  letter-spacing: 1.2px;
  color: $white;
  margin-bottom: 5px;
}

