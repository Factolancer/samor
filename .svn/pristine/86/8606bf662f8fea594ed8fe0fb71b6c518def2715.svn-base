@import "../../styles/partials/web-partials";

.forgot-pass-container {
  margin-top:70px;
  padding-bottom: 20px;
  min-height: 340px;

  @include fadeInElement(1s);
  border:0.5px solid $medium-grey;

  .forgot-pass-header {
    background-color: $brand-secondary;
    color: $white;
    @include heading(24px, 500);
    width: 100%;
    line-height: 60px;
    text-align: center;
    margin-bottom:0;
    letter-spacing:2.8px;
  }

  .forgot-pass-text{
    background-color: $light-grey;
    color: $text-medium-grey;
    font-size: 16px;
    font-weight:bold;
    width: 100%;
    line-height: 55px;
    text-align: center;
    margin-bottom: 70px;
  }

  .forgot-pass-content {
    margin: 0 24px;
    .forgot-pass-button{
      @include hollow-cta(50px);
    }
  }


  md-dialog-container{
  max-width:100vw !important;
  }

  .error{ color: $error; }
  .success{color:$success}
}

.email-sent-container{
  color: $success;
  @include fadeInElement(2s);
}
