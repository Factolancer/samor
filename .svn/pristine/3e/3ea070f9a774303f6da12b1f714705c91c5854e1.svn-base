@import "../../styles/partials/web-partials";

.sal-box{background-color: rgba(83, 173, 208, 0.77);
  position: relative;
  height:450px;
  letter-spacing: 0.5px;
  .mainTxt{color:#ffffff; font-size:30px;font-weight: 500;}
  .secTxt{color:#ffffff; font-size: 20px;font-weight: 300;}
}
.about-us-container{
  background-color: #f2f2f2;
  img{max-width: 100%;
    transition: 1s all;
    -webkit-transition: 3s ease-in all;
    &:hover{
      transform: translateY(5px);
      -webkit-transform: translateY(5px);
      -ms-transform: translateY(5px);
    }}
}
.founder-container{
  background-color: $white;
  img{
    width: 150px;
    height: 150px;
    border-radius: 50%;
  }
}
.team-container{
  background-color: #f2f2f2;
  .member{
    height: 250px;
    .details{
      position: absolute;bottom: 0;
      width:100%;
      font-size: 12px !important;
      background-color: rgba(27, 69, 95, 0.79);
      .prof-network { height: 20px;  width: 20px;float: right; border:1px groove white}
      .name{color: white; margin: 5px}
      .role{color: #459bff;margin:5px;padding-bottom: 10px;}
      .bio{@extend .name;margin: 5px}
      transition: 0.55s all;
      -webkit-transition: 0.55s all;
      -moz-transition: 0.55s all;
      height: 55px;
      overflow-y:hidden;
      &:hover{ height: 115px;}
    }
  }

}

.whyfincash-container{
  padding-bottom:20px;
  .banner{
    img{
    width: 100%;
    }
  }
  .feature-box{
    min-height: 200px;

    .icon, .details {
      background-color: #f7f5f5;}
    .icon{
      img{
        height:100px; width:100px;}
      letter-spacing: 1.5px;
      color: $black;
      font-size: 15px;
      font-weight: 500;
      hr{
        border-top: 2px solid #979797;}
    }
    .details{
      p{
        font-size: 30px;
        font-weight: 300;
        line-height: 1.14;
        letter-spacing: 2.5px;
        color: #747474;
      }
    }
  }
  button{padding:7px 50px; font-size: 1.5em;}

  .sharpen{animation: sharpen 1s;}
  @keyframes sharpen {
    0%{filter:blur(10px)}
    100%{filter:blur(0px)}
  }
}



.title{color: $dark-grey; padding-bottom: 5px;font-weight: 400;}
.text{
  color:$dark-grey;line-height: 25px;
}
.bb-1{
  border-bottom: 1px solid $dark-grey;
}
.h-line-white{height: 0.5px;background-color: $white}
.vis-hidden{visibility:hidden !important;}

.colr-bs{color: $brand-secondary;}
.bold{font-weight: 700;}
.font-20{font-size: 20px;}