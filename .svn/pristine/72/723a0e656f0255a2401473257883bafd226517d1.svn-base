@import "../../styles/partials/web-partials";

.checkout-product-item {
  padding: 0;
  margin: 0 0 20px 0;

  .head {
    background-color: $brand-secondary;
    color: $white;
    font-size: 16px;
    padding: 15px;

    .product-tag {
      color: $white;
      font-size: 10px;
      border: solid 1px $white;
      border-radius: 5px;
      padding: 1px 5px;
      margin: 0 0 0 10px;
    }

    .remove-btn {
      color: $white;
      border: none;
      font-size: 16px;
    }
  }

  .body {
    color: $text-dark-grey;
    padding: 15px;

  }

  .amount {
    font-weight: 700;
    background-color: $light-grey;
    color: $text-dark-grey;

    .disclaimer-text {
      padding: 0 15px;
      font-style: italic;
      font-size: 12px;
      font-weight: 300;
      color: $text-dark-grey;
    }
  }

}

.checkout-footer {
  padding: 0;
  margin: 20px 0;
  border: none;
  color: $text-dark-grey;

  .total-inv-checkout {
    padding: 20px 30px;
    font-weight: 700;
    background-color: $light-grey;
    color: $brand-secondary;
    font-size: 16px;
    text-align: right;
  }

  .field {

    .field-label {
      line-height: 30px;
      font-weight: bold;
    }

  }
}

.field {

  .field-label {
    line-height: 30px;
  }

}

.add-funds {
  padding-top: 5px;
  color: $brand-secondary;
  font-size: 12px;
}

.total-inv-summary {
  padding: 20px 24px;
  margin: 10px -24px -24px -24px;
  font-weight: 700;
  background-color: $light-grey;
  color: $brand-secondary;
}

.ip-details {
  font-size: 10px;
  color: $dark-grey;
  padding: 10px 0;
}

.disclaimer-text {
  max-height: 100px;
  font-size: 8px;
  overflow: hidden;
}

th, td {
  padding: 10px 5px;
}

/deep/ .mat-select {
  width: 100%;

  .mat-select-trigger {
    font-size: 14px;
  }
}