<div class="product-container">
  <div class="title">Invest in our Product</div>
  <div fxLayout="row">
    <md-card fxFlex="50" align="center" *ngFor="let product of productSolutions">
      <md-card-title>
        <img src={{product.image}}><br/>
       {{product.title}}
      </md-card-title>
      <md-card-content>
        <p>{{product.content[0]}}</p>
        <p>{{product.content[1]}}</p>
        <p>{{product.content[2]}}</p>
      </md-card-content>
      <button class="invest-button" (click)="invest()">invest</button>
    </md-card>
  </div>
</div>