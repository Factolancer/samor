@import "../../styles/partials/web-partials";

.journey {
  margin: 10px 0;
  position: relative;

  .blue {
    color: $brand-secondary !important;
    border-color: $brand-secondary !important;
  }

  .line {
    position: absolute;
    top: 90%;
    height: 2px;
    min-width: 66%;
    max-width: 66%;
    text-align: center;

    hr {
      display: block;
      height: 1px;
      border: 0;
      border-top: 1px solid #ccc;
      margin: 1em 0;
      padding: 0;
    }
  }

  .cart {
    position: absolute;
    color: $text-dark-grey;
    top: 90%;
    border: solid 1px #5C5C5C;
    border-radius: 50%;
    padding: 3px;
    background-color: $white;
  }

  .text {
    font-size: 12px;
    font-weight: 700;
    line-height: 14px;
    text-align: center;
    color: $text-dark-grey;
  }
}

.transparent-background {
  @include heading(24px, 400);
  //color: $white;
  background-color: $brand-primary;
  opacity: 0.3;
  width: 100%;
  height: 1080px;
}

.nav {
  font-size: 12px;

  .red {
    font-size: 12px;
    color: $material-warn;
  }

  .green {
    font-size: 12px;
    color: $success;
  }
}

