<div class="col-sm-10 col-sm-offset-1">
    <div class="row journey">
        <div class="col-sm-2 col-sm-offset-2 no-padding">
            <div class="journey-line">
                <div class="blue-circle"></div>
                <span class="text">SIP Type</span>
            </div>
        </div>
        <div class="col-sm-2 no-padding">
            <div class="journey-line">
                <div class="blue-circle"></div>
                <span class="text">Fund Selection</span>
            </div>
        </div>
        <div class="col-sm-2 no-padding">
            <div class="journey-line">
                <div class="grey-circle"></div>
                <span class="text">Investment Portfolio</span>
            </div>
        </div>
        <div class="col-sm-2 no-padding">
            <div class="journey-line">
                <div class="grey-circle"></div>
                <span class="text">Summary &amp; Checkout</span>
                <div class="grey-circle" style="left:95%;"></div>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-12 center-align heading-32 pad-tb-15">Invest in SmartSIP equity schemes</div>
        </div>
        <div class="row grey-back pad-20">
            <app-smart-sip-card class="col-sm-12" #smartSipFunds [funds]="quickSipFunds"></app-smart-sip-card>
        </div>
        <div class="row">
            <div class="col-sm-2 col-sm-offset-5">
                <div class="product-cta">
                    <button class="cta-50" color="primary" md-raised-button=""
                            (click)="proceed(smartSipFunds.selectedFunds)">Proceed
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>