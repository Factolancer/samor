@import "../../../styles/partials/web-partials";
.product-feature-container{
  background-color: $white;
}

.prod-feature{
  opacity: 0.8;
  &:hover{opacity:1};
  text-align: center;
  img{
    padding-bottom: 10px;
    border-bottom: 2px solid $dark-grey;
    max-width:100%;
  }
  p{
    margin-top:2px;
    text-align:center;
    color: $dark-grey;
  }
}

.sub-heading{
  color: $dark-grey;
  font-size: 25px;
  letter-spacing: 1.5px;
}
.colr-bs{color:$brand-secondary}
.colr-dg{color:$dark-grey}