md-input{
    width: 90%;
}

md-grid-tile{
    display: block;
}

md-toolbar-row{
    margin-top: -20px;
}

figure{
    display: block !important;
}

section{
     width: 45%;
     align-self: center;
     margin: auto;
    border-bottom: 0.5px solid #0081c9;
 }

.sectiontitle{
    border-left: 0.5px solid #0081c9;
}

.kycform{
    border-right: 0.5px solid lightgray;
    border-bottom: 0.5px solid lightgray;
    border-left: 0.5px solid #0081c9;
}

 select{
     width: 90%;
     height: 25%;
 }

.material-icons.md-dark { color: rgba(0, 0, 0, 0.54); }
.material-icons.md-dark.md-inactive { color: rgba(0, 0, 0, 0.26); }
.material-icons.blue600{ color: #337ab7; }
.material-icons.md-light { color: rgba(255, 255, 255, 1); }
.material-icons.md-light.md-inactive { color: rgba(255, 255, 255, 0.3); }

.downarrow {
    float: right;
    margin-right: 10px;
}

.info-div{
    display: inline-flex;
    padding-left: 32px;
    font-size: 16px;
}

.info-label{
    color: steelblue;
}

 .errorMessage {
     float: right;
     margin-top: 5px;
     font-size: 0.7em;
     color: red;

 }
 .errorMessage span {
     position: absolute;
     color: red;
     top: -10px;
     font-size:0.63em;
 }

 .button-list-margins {
     margin-bottom: 5%;
     margin-top: -5%;
 }

 
 .field_label{
     color: rgba(0, 0, 0, 0.38);
     display: block;
     font-family: Roboto, "Helvetica Neue", sans-serif;
     text-align: left;
     font-size: 11px;
     font-weight: 700;
     line-height: 20px;
     position: absolute;
     text-align: left;
     margin-bottom: 5px;
     margin-left: -105px;
     margin-top: -20px;
     padding-bottom: 5px;
 }

.autosuggest, .dropdown, .result {
    margin:0;
    padding:0;
    border:0;
    width:250px;
}

.autosuggest {
    padding:4px;
    border:1px solid #000;
}

.result {
    width:260px;
    list-style:none;
}

.result li {
    padding:5px;
    border:1px solid #000;
    border-top:0;
    cursor: pointer;
}

.result li:hover {
    background:#333;
    color:#fff;
}
