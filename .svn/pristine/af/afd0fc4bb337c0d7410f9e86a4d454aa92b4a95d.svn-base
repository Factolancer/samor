@import "../../styles/partials/web-partials";

.fund-name {
  font-weight: 700;
  color: $brand-secondary;
}

.product-card {

  padding: 0;

  .card-head {
    background-color: $brand-secondary;
    font-size: 24px;
    color: $white;
    padding: 15px 0;
    text-align: center;
  }

  .list-item {
    padding: 10px 0;

    .list-icon {
      width: 52px;
      height: 52px;
      border-radius: 50%;
      margin-right: 20px;
    }
  }

  .card-foot {
    text-align: center;
    padding: 10px 25%;
  }

}

.calc-text {
  text-align: center;
  font-size: 24px;
  color: $text-dark-grey;

  a {
    color: $brand-secondary;
  }
}

.elss-explanation {
  margin-top: 50px;
  margin-bottom: 50px;
  background-color: $white;
  border: solid 1px $dark-grey;

  .highlight {
    background-color: $brand-secondary;
    color: $white;
    font-size: 18px;
    text-align: center;
  }

  .feature-card {
    text-align: center;
    color: $dark-grey;
    margin: 25px 0;

    .elss-title {
      background-color: $brand-primary;
      color: $white;
      font-weight: 700;
    }

    .other-title {
      background-color: $light-grey;
      color: $brand-secondary;
      font-weight: 700;
    }
  }
}

