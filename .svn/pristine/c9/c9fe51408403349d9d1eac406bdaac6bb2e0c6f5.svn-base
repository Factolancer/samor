@import "../../public/styles/partials/web-partials";

.fund-name {
  font-weight: 700;
  color: $brand-secondary;
}

.sip-title-area {
  margin: 21px 0;
  border-radius: 100px;
  border: solid 1px $brand-primary;
  text-align: center;

  .text {
    line-height: 47px;
    font-size: 24px;
    color: $brand-primary;
  }
}

.sip-product-des {
  margin: 25px 0;

  .text {
    font-size: 14px;
    font-weight: 500;
    color: $black;
    text-align: center;
  }

  .icon {
    border-radius: 50%;
    border: solid 1px $brand-secondary;
    background: $white;
    margin-bottom: 20px;
    text-align: center;

    img {
      max-width: 80%;
      vertical-align: inherit;
    }
  }

}
