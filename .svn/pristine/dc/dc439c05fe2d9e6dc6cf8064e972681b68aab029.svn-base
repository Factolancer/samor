@import "../../public/styles/partials/web-partials";

.fund-name {
  font-weight: 700;
  color: $brand-secondary;
}

.heading-32-blue-tax {
  @include heading(32px, 400);
  color: $brand-primary;
}

.heading-32-black-tax {
  @include heading(32px, 400);
  color: $black;
}

.tax-product {
  border: solid 1px $dark-grey;
  text-align: center;

  .tax-feature-area {
    width: 100%;

    .tax-feature {

      .tax-feature-text {
        background-color: $brand-primary;
        color: $white;
        line-height: 75px;
        font-size: 16px;
        font-weight: 300;
        margin-top: 25px;
      }

      .tax-feature-icon {
        border-radius: 50%;
        border: solid 1px $brand-secondary;
        background: $light-grey;
        height: 200px;
        width: 200px;
        margin: auto;
        vertical-align: middle;

        img {
          max-width: 100%;
        }
      }

      &:first-of-type {
        border-right: solid 1px $medium-grey;
      }
    }
  }

  .heading-32-tax {
    @include heading(32px, 700);
    color: $brand-primary;
  }

}

.elss-explanation {
  margin-top: 50px;
  margin-bottom: 50px;
  background-color: $white;
  border: solid 1px $dark-grey;

  .title {
    background-color: $brand-primary;
    color: $white;
    font-size: 18px;
    text-align: center;
  }

  .feature-card {
    text-align: center;
    color: $dark-grey;
    margin: 25px 0;

    .elss-title {
      background-color: $brand-secondary;
      color: $white;
      font-weight: 700;
    }

    .other-title {
      background-color: $light-grey;
      color: $brand-secondary;
      font-weight: 700;
    }
  }
}

.calc-box {
  border: solid 1px $medium-grey;

  .calc-title {
    line-height: 80px;
    font-size: 26px;
    font-weight: 400;
    background-color: $brand-secondary;
    color: $white;
    text-align: center;
  }

  .calc-sub-title {
    font-size: 20px;
    color: $text-dark-grey;
    text-align: center;
    letter-spacing: 2px;
  }

  .completeTherm {
    background-color: #0ADAC2;
    min-height: 10px;
    border-radius: 2px;
  }

  .remainingTherm {
    background-color: $light-grey;
    min-height: 10px;
    border-radius: 2px;
  }

  .completeThermText {
    color: #0ADAC2;
    text-align: right;
  }

  .remainingThermText {
    color: $material-warn;
    text-align: right;
  }

  .question-area {
    background-color: $light-grey;
    margin: 20px;
    padding: 20px;

    .card {
      min-height: 150px;
      padding: 20px;

      .sub-title {
        font-size: 12px;
        font-weight: 700;
      }

      .elss-img {
        background-image: url('/public/images/tax/calc/elss.svg');
        background-size: cover;
      }

      .pf-img {
        background-image: url('/public/images/tax/calc/pf.svg');
        background-size: cover;
      }

      .lic-img {
        background-image: url('/public/images/tax/calc/lic.svg');
        background-size: cover;
      }

      .fd-img {
        background-image: url('/public/images/tax/calc/fd.svg');
        background-size: cover;
      }

      .nsc-img {
        background-image: url('/public/images/tax/calc/nsc.svg');
        background-size: cover;
      }

      .scss-img {
        background-image: url('/public/images/tax/calc/scss.svg');
        background-size: cover;
      }

      .sukanya-img {
        background-image: url('/public/images/tax/calc/sukanya.svg');
        background-size: cover;
      }

      .ulip-img {
        background-image: url('/public/images/tax/calc/ulip.svg');
        background-size: cover;
      }

    }

    .title {
      color: $text-dark-grey;
    }

    .salary {
      background-color: $white;
      border-radius: 2px;
      border: solid 1px $brand-primary;
    }

    ul li {
      margin: 5px;
      color: $text-medium-grey;
      font-size: 10px;
    }

    p {
      margin: 15px 0;
      color: $text-medium-grey;
      font-size: 10px;
    }
  }

  .results-area {
    border: solid 1px $dark-grey;
    margin: 20px;
    padding: 20px;

    .title {
      color: $text-dark-grey;
      font-size: 18px;
      letter-spacing: 2px;
      text-align: center;
      padding: 15px;
    }

    .curr-inv {
      background-color: #0adac2;
      color: $white;
      text-align: center;
      padding: 20px;
      margin: 5px;
      font-weight: 700;
    }

    .amount-area {
      text-align: center;
      margin: 5px;
      font-weight: 700;

      .amount-title {
        color: $white;
        font-size: 14px;
        background-color: $brand-secondary;
        padding: 20px;
      }

      .amount {
        color: $text-dark-grey;
        background-color: $light-grey;
        padding: 20px;
      }
    }
  }
}