<div>
    <div fxFlex="100" class="section-header">
        <div fxLayout="row" class="cursor-pointer" (click)="toggleOther()">
            <div fxFlex="8" fxFlexOffset="2">
                <md-icon
                        [ngClass]="{'material-icons': true, 'md-brand-secondary': !othersaved, 'blue600': othersaved}">
                    check
                </md-icon>
            </div>
            <div fxFlex="83">
                <span>{{heading.otherSectionHeading}}</span>
            </div>
            <div fxFlex="7">
                <md-icon *ngIf="othercollapsed">expand_more</md-icon>
                <md-icon *ngIf="!othercollapsed">expand_less</md-icon>
            </div>
        </div>
    </div>

    <div fxFlex="100" class="section-content">
        <form [formGroup]="otherForm" (ngSubmit)="onOtherSubmit()" [@ShowHide]="state" novalidate>
            <br/>
            <br/>
            <div>
                <div fxLayout="row" fxLayoutAlign="center center">
                    <div fxFlex="40">
                        <md-select required formControlName="income" placeholder="Annual Income">
                            <md-option *ngFor="let income of incomerange" value="income.cndrfnum">{{income.cndname}}
                            </md-option>
                        </md-select>
                        <!--<md-hint *ngIf="!otherForm.controls['income'].valid && (otherForm.controls['income'].touched)">
                            Required field
                        </md-hint>-->
                    </div>
                    <div fxFlex="40">
                        <md-select required formControlName="occupation" placeholder="Select Occupation">
                            <md-option *ngFor="let occupation of occupations" value="occupation.cndrfnum">
                                {{occupation.cndname}}
                            </md-option>
                        </md-select>
                        <!--<md-hint
                                *ngIf="!otherForm.controls['occupation'].valid && (otherForm.controls['occupation'].touched)">
                            Required field
                        </md-hint>-->
                    </div>
                </div>
                <br/><br/>
                <div fxLayout="row" fxLayoutAlign="center center">
                    <div fxFlex="40">
                        <md-select required formControlName="nationality" placeholder="Nationality">
                            <md-option *ngFor="let country of countries" [value]="country.cndrfnum">{{country.cndname}}
                            </md-option>
                        </md-select>
                    </div>
                    <div fxFlex="40">
                        <md-select required formControlName="birth_country" placeholder="Birth Country">
                            <md-option *ngFor="let country of countries" [value]="country.cndrfnum">{{country.cndname}}
                            </md-option>
                        </md-select>
                    </div>
                </div>
                <br/>
                <div fxLayout="row" fxLayoutAlign="center center">
                    <div fxFlex="40">
                        <md-input-container>
                            <input md-input required type="text" formControlName="birth_city"
                                   placeholder="Birth City">
                            <md-hint align="end" *ngIf="formErrors.birth_city" class="errorMessage">{{formErrors.name}}</md-hint>
                        </md-input-container>
                    </div>
                    <div fxFlex="40">
                        <label class="field_label">Tax Residency</label>
                        <md-radio-group required formControlName="tax_country_india" [(ngModel)]="indiantaxpayer">
                            <md-radio-button value="Yes">Tax Resident of India</md-radio-button>
                            <md-radio-button value="No">Another Country</md-radio-button>
                        </md-radio-group>
                    </div>
                </div>
                <br/>
                <div fxLayout="row" fxLayoutAlign="center center">
                    <div fxFlex="40" *ngIf="indiantaxpayer==='No'">
                        <md-select required formControlName="tax_country" placeholder="Tax Country">
                            <md-option *ngFor="let country of countries" [value]="country.cndrfnum">{{country.cndname}}
                            </md-option>
                        </md-select>
                        <!--<div fxFlexLayout="row">
                            <div fxFlex="50">
                                <md-select required formControlName="tax_country" placeholder="Tax Country">
                                    <md-option *ngFor="let country of countries" [value]="country.name">{{country.name}}
                                    </md-option>
                                </md-select>
                            </div>
                            <div fxFlex="50">
                                <md-input-container>
                                    <input md-input type="text" formControlName="tin" placeholder="TIN">
                                </md-input-container>
                            </div>
                        </div>-->

                    </div>
                    <div fxFlex="40" *ngIf="indiantaxpayer=='Yes'"></div>
                    <div fxFlex="20">
                        <label class="field_label">Politically Exposed</label>
                        <md-radio-group required formControlName="politically_exposed">
                            <md-radio-button value="Yes">Yes</md-radio-button>
                            <md-radio-button value="No">No</md-radio-button>
                        </md-radio-group>
                    </div>
                    <div fxFlex="20">
                        <label class="field_label">Politically related</label>
                        <md-radio-group required formControlName="politically_related">
                            <md-radio-button value="yes">Yes</md-radio-button>
                            <md-radio-button value="No">No</md-radio-button>
                        </md-radio-group>
                    </div>
                </div>
                <br/>
                <div fxLayout="row" fxLayoutAlign="center center">
                    <button md-raised-button color="primary" type="submit" [disabled]="!otherForm.valid">Save</button>
                </div>
                <br/>
            </div>
        </form>
    </div>
</div>

