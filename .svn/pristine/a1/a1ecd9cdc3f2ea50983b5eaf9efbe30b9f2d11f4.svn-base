@import "../../styles/partials/web-partials";

.forgot-pass-container {
  margin-top:70px;
  padding-bottom: 20px;
  letter-spacing: 0.8px;

  @include fadeInElement(1s);
  border:0.5px solid $medium-grey;

  .forgot-pass-header {
    background-color: $brand-secondary;
    color: $white;
    @include heading(24px, 500);
    width: 100%;
    line-height: 60px;
    text-align: center;
    margin-bottom:0;
    letter-spacing:2.8px;
  }

  .forgot-pass-text{
    background-color: $light-grey;
    color: $text-medium-grey;
    font-size: 16px;
    font-weight:bold;
    width: 100%;
    line-height: 55px;
    text-align: center;
    margin-bottom: 50px;
  }

  .forgot-pass-content {
    margin: 0 24px;
  }

  md-dialog-container{
  max-width:100vw !important;
  }
}

.email-sent-container{
  @include fadeInElement(1s);
  .message{
    font-size: 18px;
    font-weight: 500;
    line-height: 1.5;
    color: #7c7c7c;
  }
}

.warning-box{
  min-height: 40vh;
  font-size: 18px;
  .message{
     font-size: 22px;
     letter-spacing: 0.2px;
     font-weight: 500;
     margin:0;
     color: $error;
  }
}

.showPass{opacity: 0.3;}

.resLoading{
  background: url('../../assets/img/loading.gif')  no-repeat 50% 50%;
  background-size: 25px 25px;
}

.vis-hidden{
  visibility: hidden ;
}

button{padding: 0 40px;}

.colr-bs{color: $brand-secondary;}
.error{ color: $error; }
.success{color:$success}
