@import 'partials/_web-partials';
//***********************BODY BASE********************************

body {
  font-family: $font-stack;
  font-size: 14px;
}

a, a:hover, a:active, a:focus, a:visited {
  text-decoration: none;
  color: #ffffff;
}

.header {
  background-color: $brand-primary;
  border: solid 0.5px $brand-primary;
  color: $white;
  font-size: 12px;
  height: 82px;
  padding: 9px 54px;

  .nav {
    margin-left: 100px;

    .nav-btn {
      font-size: 12px;
    }

    a {
      margin: 0 12px;
    }
  }

  .login-btn-area {
    min-width: 90px;
    text-align: center;
    border-radius: 6px;
    border: solid 1.5px $white;
    margin: 0 12px;

    .text {
      line-height: 35px;
    }
  }

  .signup-btn-area {
    min-width: 90px;
    text-align: center;
    border-radius: 6px;
    background-color: $brand-secondary;
    margin: 0 12px;

    .text {
      line-height: 35px;
    }
  }
}

.footer-top {
  background-color: $footer;
  color: $white;
  min-height: 64px;
}

.footer-bottom {
  background-color: #2f5871;
  color: $white;
}

.star {
  color: $material-accent;
}

.clickable:hover {
  cursor: pointer;
}

.product-title-area {
  margin: 21px 0;
  border-radius: 100px;
  border: solid 1px #628ca5;
  text-align: center;

  .text {
    line-height: 47px;
    font-size: 24px;
    color: #52809b;
  }
}

.product-des {
  margin: 25px 0;

  .text {
    font-size: 14px;
    font-weight: 500;
    color: #595959;
    text-align: center;
  }

  .icon {
    border-radius: 50%;
    border: solid 1px #53add0;
    background: #ffffff;
    margin-bottom: 20px;
    text-align: center;

    img {
      max-width: 80%;
      vertical-align: inherit;
    }
  }

}

.product-cta {
  margin: 20px 0;
}

.fund-card {
  margin-bottom: 5px;
}

.fund-card-item {
  padding-left: 10px;
  text-align: center;
}

.journey {
  margin: 20px 0 0 0;
}

.journey-line {
  text-align: center;
  font-weight: 700;

  &::before {
    content: "";
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    border-bottom: 2px dashed $dark-grey;
  }

  .text {
    position: relative;
    display: inline-block;
    padding: 0 10px;
    font-size: 12px;
    color: $dark-grey;
  }

  .blue-circle {
    position: absolute;
    border: 2px solid $brand-secondary;
    top: 50%;
    left: -5%;
    padding: 6px 6px;
    background: $brand-secondary;
    width: 6px;
    border-radius: 100%;
    margin-left: auto;
    margin-right: auto;
  }

  .grey-circle {
    position: absolute;
    border: 2px solid $dark-grey;
    top: 50%;
    left: -5%;
    padding: 6px 6px;
    background: $dark-grey;
    width: 6px;
    border-radius: 100%;
    margin-left: auto;
    margin-right: auto;
  }

}

.fc-divider {
  padding: 45px 0;

  &::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    border-bottom: 1px solid #979797;
  }

  span {
    position: relative;
    display: inline-block;
    margin-left: 45%;
    padding: 0 10px;
    background: #fff;
    font-size: 18px;
  }
}

.grey-back {
  border-radius: 2px;
  background-color: $light-grey;
}

.wrapper {
  margin: 10px auto 20px auto;
  max-width: 1280px;
}


