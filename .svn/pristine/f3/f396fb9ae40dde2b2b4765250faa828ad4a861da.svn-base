.main-card {
    width: 32%;
    padding: 0px;
    height: 100%;
    background-color: #f2f2f2;
    box-shadow: 0 7px 14px 0 rgba(0, 0, 0, 0.5);
    z-index: 2;
}

.left-card {
    width: 27%;
    padding: 0px;
    height: 100%;
    background-color: #f2f2f2;
    box-shadow: -2px 2px 6px 0 rgba(0, 0, 0, 0.5);
    margin-top: 20px;
}

.right-card {
    width: 30%;
    height: 100%;
    background-color: #f2f2f2;
    box-shadow: 2px 3px 2px 0 rgba(0, 0, 0, 0.5);
    margin-top: 20px;
}

.main-header {
    width: 100%;
    height: 85px;
    margin: 0;
    background-color: #53add0;
    box-shadow: inset 0 1px 3px 0 rgba(0, 0, 0, 0.5);
    border: solid 1px #979797;
    justify-content: center;
}

.side-header {
    width: 100%;
    height: 64px;
    margin: 0;
    background-color: #b5b3b3;
    border: solid 1px #979797;
    justify-content: center;
}

md-card-content {
    justify-content: center;
}

