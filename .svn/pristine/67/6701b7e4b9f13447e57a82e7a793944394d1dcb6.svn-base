.grey-back {
  border-radius: 2px;
  background-color: $light-grey;
}
.medium-grey-back {
  background-color: $light-med-grey;
}
.dark-grey-back {
  background-color: $medium-grey;
}
.md-brand-secondary-back {
  background-color: $brand-secondary;
}
.white-back {
  background-color: $white;
}
.transparent-back {
  background-color: transparent;
}

.wrapper {
  margin: auto;
  max-width: 1280px !important;
  padding: 0 10px;
}

.fc-body {
  min-height: 78vh;
  margin-bottom: 50px;
  padding-bottom: 50px;
  position: relative;
  top: 65px;
}

//loading icon for delay in load
.loading {
  width: 50%;
  margin: auto;
  text-align: center;
  img {
    height: 25px;
    width: 25px;
  }
}

.star {
  color: $material-accent;
}

.grey-star {
  color: $text-medium-grey;
}

hr {
  margin: 5px 0;
  border: 0;
  border-top: 1px solid $medium-grey;
}
.sharp-txt{
  font-weight: 200 !important;
}
.dark-grey-text {
  color: $text-dark-grey;
  &.bold {
    font-weight: 700;
  }
}
.medium-grey-text {
  color: $text-medium-grey !important;
  &.bold {
    font-weight: 700;
  }
}
.lm-grey-txt{
  color: $light-med-grey;
}
.light-grey-text {
  color: $light-grey !important;
  &.bold {
    font-weight: 700;
  }
}
.white-txt{
  color: $white;
}


.disclaimer-text {
  color: $text-medium-grey;
  font-weight: 400;
  font-style: italic;
  font-size: 12px;
}

.bold {
  font-weight: 700;
}

.italic {
  font-style: italic;
}

.md-brand-secondary {
  color: $brand-secondary;
}

.material-warn {
  color: $material-warn;
}

.quote {
  font-style: italic;
}

.errorMessage {
  float: right;
  margin-top: 1px;
  font-size: 0.7em;
  color: $error;
}
.no-box-shadow{
  box-shadow: none !important;
}
.no-scroll {
  overflow-y: hidden;
}
.fc-align-end {
  text-align: end;
}