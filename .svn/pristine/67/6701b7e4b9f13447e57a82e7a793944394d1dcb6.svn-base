@import "partials/web-partials";

.header {
  background-color: $brand-primary;
  border: solid 0.5px $brand-primary;
  color: $white;
  font-size: 12px;
  height: 65px;
  padding: 4px 54px;

  .nav {
    margin-left: 40px;

    .nav-btn {
      color: $white;
      font-size: 12px;
      max-width:100%;
    }

    .menu {
      a {
        color: $text-dark-grey;
        font-size: 12px;
      }
    }
  }

  .login-btn-area {
    min-width: 90px;
    text-align: center;
    border-radius: 3px;
    border: solid 1.5px $white;
    margin: 0 12px;
    height: 30px;
    color: $white;
    background-color: $brand-primary;

    &:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }

    .text {
      line-height: 28px;
    }
  }

  .signup-btn-area {
    min-width: 90px;
    text-align: center;
    border-radius: 3px;
    background-color: $brand-secondary;
    color: $white;
    border: solid 1.5px $brand-secondary;

    &:hover {
      background-color: rgba(96, 199, 240, 1);
    }

    .text {
      line-height: 28px;
    }
  }
}

.mobile-header-container{
  .login-btn-area{
    text-align: center;
    border-radius: 3px;
    border: solid 1.5px #95a3d8;
    height: 30px;
    color: $white;
    background-color: $brand-primary;
    &:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }
    .text {
      line-height: 28px;
    }
  }
  .signup-btn-area{
    @extend .login-btn-area;
    background-color: $brand-secondary !important;
    &:hover {
      background-color: rgba(96, 199, 240, 1) !important;
    }
  }
}


.footer {

  background-color: #2f5871;

  .top {
    background-color: #2c4f65;
    position: relative;
    padding: 20px 0;
    font-size: 14px;
    color: #FFFFFF;
    font-weight: 300;
    a{color: #FFFFFF;}
  }

  .middle {
    padding: 30px 0px 5px 0px;
    .section-title {
      font-size: 12px;
      color: #FFFFFF;
      height: 24px;
      padding: 0;
      font-weight: 400;
      border-bottom: 1px solid rgba(255, 255, 255, 0.4);
      i{float:right;font-size: 14px;}
    }
    &.desktop{
      .section-title{
        border-bottom: 0 !important;
      }
      ul{height:auto !important;}
    }

    .sub-section-title {
      font-size: 11px;
      color: #FFFFFF;
      height: 22px;
      padding: 0;
      font-weight: 300;
    }

    ul {
      padding-left: 0 !important;
      margin-top: 5px !important;
    }
    li {
      list-style: none;
      padding: 5px 0;
    }
    a {
      color: #FFFFFF;
      font-size: 12px;
      font-weight: 200;
      letter-spacing: 0.2px;
      opacity: 0.8;
      transition: all .30s ease-out;
      &:hover {
        opacity: 1;
      }
    }
    .social-icons {
      margin: 5px 2px 5px 0;
      max-width: 150px;
      a{
        border: 1px solid rgba(255,255,255,0.7);
        padding: 15px;
        margin: 0 10px 10px 0;
        border-radius: 50%;
        height: 50px;
        width: 50px;
        display: inline-block;
        text-align: center;
        box-sizing: border-box;
        transition: 0.33s all;
        &:hover{
          background-color: rgba(3, 72, 103, 0.7);
        }
      }
      img {
        height: 20px;
        width: 20px;
      }
    }
    .address {
      @extend a;
    }
    .copyright {
      @extend a;
      .symbol {
        font-size: 14px;
      }
    }
  }
  .bottom {
    text-align: center;
    @extend .middle;
    padding: 5px 0 10px !important;
    border-top: 1px solid #979797;
    ul {
      margin: 5px 0 !important;
    }
    li {
      list-style: none;
      display: inline-flex;
    }
    a {
      padding: 0 10px;
    }
    .bor-lr-1-white {
      border-right: 1px solid $white;
      border-left: 1px solid $white;
    }
    .bor-b-1-gray {
      border-bottom: 1px solid #970f17;
    }
    .mar-auto {
      margin: auto !important;
    }
    .bor-colr-gray {
      border-color: #979797;
    }
    .prefix {
      color: $medium-grey;
    }

    .disclaimer{
      color:  #d5dee3;
      font-size: 13px;
      font-weight: 200;
    }
  }
}

.banner-content{
  letter-spacing: 3px;
  .white{color: white;}
  .yellow {color:  rgba(250, 221, 61, 1);}
  .bor-t-1-white {border-top: 1px solid rgba(255, 255, 255, 0.8);}
  .txt-2-5 {font-size:2.5em;}
  .txt-2 {font-size:2em;}
  .txt-1-3 {font-size:1.3em;}
  .txt-1-1 {font-size:1.1em;}
  .txt-1{font-size: 1em;}
  .txt-0-8{font-size: 0.9em;}
  .txt-norm {font-weight: 200;}

  .ls-1-0{ letter-spacing: 1px;}
  .mar-b-10-n { margin-bottom: -10px !important;}
  .pad-r-60 { padding-right: 60px;}
  .cta-btn {
    cursor: pointer;
    border:none;
    outline:none;
    letter-spacing: 1px;
    font-size: 1.2em;
    background-color: rgba(83,173,208, 0.9);
    text-align: center;
    text-decoration: none;
    display: inline-block;
    color: white !important;
    max-width: 300px;
    margin: 5px auto;
    border-radius: 4px;
    padding: 10px 40px;
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.1), 0 6px 20px 0 rgba(0,0,0,0.1);
    transition: 0.2s background-color ease-in-out;
  }
  .cta-btn:hover {
    background-color: rgba(83,173,208, 0.7);
  }
  .cta-btn:active {
    box-shadow: none;
  }
}
.mat-dialog-container {
  background: white; }
.mat-dialog-container {
  max-width: 100vw !important;
}
.clickable {
  cursor: pointer;
}

.clickable:hover {
  cursor: pointer;
}
.scroll-x{
  display: block !important;
  overflow-x: auto !important;
  white-space: nowrap !important;
}

.fund-card {
  margin-bottom: 5px;
  width: 95%;
}

.fund-card-item {
  padding-left: 10px;
  @media only screen and (min-width: 768px) {
    text-align: center;
  }
  @media only screen and (max-width: 768px) {
    text-align: left;
  }
}

.fc-divider {
  padding: 20px 0;
  text-align: center;
  font-size: 18px;
  /*&:before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    border-bottom: 1px solid #979797;
  }*/
