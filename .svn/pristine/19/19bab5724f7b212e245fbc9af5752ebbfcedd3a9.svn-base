<div class="container" fxFlex="40" fxFlex.lt-md="98">
    <div class="aadhar-kyc-container">
        <div fxLayout="column" fxLayoutAlign="center center" class="aadhar-kyc-header" md-dialog-title>
            <div> AADHAAR eKYC</div>
            <i class="disclaimer">(This entitles you to transact upto INR 50,000 per Fund House per year)</i>
        </div>
        <div class="aadhar-kyc-content">
            <div class="aadhar-form">
                <div class="heading"> KYC Status via Aadhaar</div>

                <div fxLayout="row" fxLayoutAlign="center center">
                    <form [formGroup]="AadharKYCStatusForm" (ngSubmit)="checkKYC()" fxFlex="70" align="center"
                          novalidate>
                        <br/>
                        <div fxLayout="column" fxLayoutAlign="center">
                            <md-input-container fxFlex="60" fxFlex.xs="100">
                                <input mdInput formControlName="aadhar" [maxLength]=aadharLength required
                                       placeholder="Enter your Aadhaar number" #aadhar
                                       [value]="aadhar.value.toUpperCase()">
                                <md-hint class="error" align="end" *ngIf="formErrors.aadhar">{{formErrors.aadhar}}
                                </md-hint>
                            </md-input-container>
                            <md-input-container fxFlex="60" fxFlex.xs="100">
                                <input mdInput formControlName="mob" [maxLength]=mobLength required
                                       placeholder="Mobile(as per Aadhaar card records)" #mob>
                                <md-hint class="error" align="end" *ngIf="formErrors.mob">{{formErrors.mob}}</md-hint>

                            </md-input-container>
                            <md-input-container fxFlex="60" fxFlex.xs="100">
                                <input mdInput formControlName="email" required
                                       placeholder="E-mail (as per Aadhaar card records)" #email>
                                <md-hint class="error" align="end" *ngIf="formErrors.email">{{formErrors.email}}
                                </md-hint>
                            </md-input-container>
                            <md-input-container fxFlex="60" fxFlex.xs="100">
                                <input mdInput formControlName="pan" [maxLength]=panLength required
                                       placeholder="Enter your PAN" #pan class="upper"
                                        [readonly]="panExist">
                                <md-hint class="error" align="end" *ngIf="formErrors.pan">{{formErrors.pan}}</md-hint>
                            </md-input-container>
                        </div>
                        <br/>
                        <div fxLayout="row" fxLayoutAlign="center">
                            <button fxFlex="30" fxFlex.xs="60" fxAlign="center" md-raised-button
                                    [ngClass]="{'resLoading':aadharResloading,'shake':shake}" [disabled]="submitted"
                                    (click)="validateKYC(AadharKYCStatusForm.valid)">
                                <span [ngClass]="{'vis-hidden':aadharResloading}">Submit</span>
                            </button>
                        </div>
                    </form>
                </div>
                {{errorMessage}}
            </div>
        </div>
    </div>

    <!--hidden form-->

    <form [hidden]="true" id="kycForm" ngNoForm action={{eKYCUrl}} METHOD="post" #finalform>
        <label>Aadhaar no </label>
        <input [hidden]="true" type="text" name="Aadhar" [value]="aadhaar"/><br/>
        <label>Return url </label>
        <input [hidden]="true" type="text" name="url" [value]="ekycReturnUrl"/><br/>
        <label>KYC data </label>
        <input [hidden]="true" type="text" name="kyc_data" [value]="ekyc_data" size="100"/><br/>
        <input type="submit" value="Go to EKYC"/>
    </form>


</div>
