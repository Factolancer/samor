@import "../../styles/partials/web-partials";

.checkout-product-item {
  padding: 0;
  margin: 0 0 20px 0;

  .head {
    background-color: $brand-secondary;
    color: $white;
    font-size: 16px;
    padding: 15px;

    .product-tag {
      color: $white;
      font-size: 10px;
      border: solid 1px $white;
      border-radius: 5px;
      padding: 1px 5px;
      margin: 0 0 0 10px;
    }

    .remove-btn {
      color: $white;
      border: none;
      font-size: 16px;
    }
  }

  .body {
    color: $text-dark-grey;
    padding: 15px;

  }

  .amount {
    font-weight: 700;
    background-color: $light-grey;
    color: $text-dark-grey;

    .disclaimer-text {
      padding: 0 15px;
      font-style: italic;
      font-size: 12px;
      font-weight: 300;
      color: $text-dark-grey;
    }
  }

}

.checkout-footer {
  padding: 0;
  margin: 20px 0;
  border: none;
  color: $text-dark-grey;

  .total-inv-checkout {
    padding: 20px 30px;
    font-weight: 700;
    background-color: $light-grey;
    color: $brand-secondary;
    font-size: 16px;
    text-align: right;
  }

  .field {

    .field-label {
      line-height: 30px;
      font-weight: bold;
    }

  }
}

.field {
  .field-label {
    line-height: 30px;
  }
}

.summary {

  .section {
    margin: 10px 0;

    &:last-of-type {
      margin-top: 20px;
    }

    .section-title {
      line-height: 18px;
      color: $white;
      background-color: $medium-grey;
      font-size: 16px;
      padding: 5px;
    }

    .sip-disclaimer-text {
      padding: 10px 0;
      font-style: italic;
      font-size: 10px;
      font-weight: 300;
      color: $text-dark-grey;
    }
  }

  .fund-list-title {
    background-color: $brand-secondary;
    color: $white;
    font-size: 14px;
    padding: 10px 10px;
    text-align: center;
  }

  .fund-list-body {
    color: $text-dark-grey;
    font-size: 14px;
    padding: 10px 10px;
    text-align: center;

    .plan-option {
      font-size: 12px;
      font-weight: 700;
      color: $text-dark-grey;
      span {
        color: $text-medium-grey;
        padding: 0 10px 0 0;
      }
    }

    .name {
      text-align: left;
    }

  }

  .investor-details {
    margin: 40px 0 0 0;

    .head {
      background-color: $medium-grey;
      color: $white;
      padding: 10px 0;
      text-align: center;
      font-size: 16px;
    }

    .body {
      padding: 10px 10px;
      font-size: 14px;

      .key {
        color: $text-dark-grey;
        padding: 10px 10px;
        font-weight: 700;
      }

      .value {
        color: $text-medium-grey;
        padding: 10px 10px;

        .line-2 {
          color: $text-medium-grey;
          font-size: 12px;
        }
      }

    }
  }

  .investment-amount {

    .right {
      background-color: $brand-secondary;
      color: $white;
      font-size: 18px;
      padding: 20px 10px;
      text-align: center;
      font-weight: 700;
    }

    .left {
      color: $text-dark-grey;
      font-size: 14px;
      padding: 20px 10px;
      font-weight: 700;
    }
  }

  .agreement {
    font-size: 12px;
    color: $text-dark-grey;
    font-weight: 700;

    md-checkbox {
      font-size: 12px;
      /deep/ .mat-checkbox-layout {

        padding: 2px 0;

        .mat-checkbox-inner-container {
          height: 15px;
          width: 15px;

          .mat-checkbox-frame {
            border: 2px solid;
          }
        }

        .mat-checkbox-label {
          line-height: 15px;
        }
      }
    }
  }

  .ip-time {
    font-size: 10px;
    color: $text-dark-grey;
    text-align: right;
  }

  .disclaimer {

    .title {
      font-size: 14px;
      color: $text-dark-grey;
      border-bottom: 1px solid $text-dark-grey;
    }

    .body-text {
      font-size: 10px;
      color: $text-medium-grey;
      padding: 10px 20px;

    }
  }

  th, td {
    padding: 10px 5px;
  }
}

/deep/ .mat-select {
  width: 100%;

  .mat-select-trigger {
    font-size: 14px;
  }
}

/deep/ .mat-select-panel {
  .mat-select-content {
    .mat-option {
      .line {
        font-size: 14px;
        line-height: 24px;
      }
    }
  }
}