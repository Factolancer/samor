@import "../../public/styles/partials/web-partials";

.portfolio-box{
	padding: 20px 100px;
	background-color: $light-grey;
	.card-title{
		border:solid 1px #d6d6d6;
		line-height: 50px;font-weight: 600;
		color:$white;
		background-color: $brand-secondary;
	}
	.card-value{
		border:solid 1px #d6d6d6;
		line-height: 70px;font-weight: 600;
		border-top:none;
		background-color: $white;
		color:$brand-secondary;
	}
	.clckable{
		cursor: pointer;
	}
}
.portfolio-heading{
	@include heading(36px, 300);
	letter-spacing:1.8px;
	margin-bottom: 30px;
	span{
		padding-bottom: 5px;  border-bottom:solid 1px #4d4c4c;
	}
}
.portfolio-card-container>div {
	margin: 0 30px;
}

.my-account, .personalised-offers, .quick-links, .report{
	margin-bottom: 20px;
	border: solid 1px $medium-grey;
	.title{ background-color: $light-grey; color: $black; padding: 10px; font-weight: 500}
	.icon{opacity: 0.7;}
	.links{
		color:$dark-grey; 
		text-decoration-line: underline;
		margin-left:15px; line-height:30px;
	}
}
.my-account .links{border-bottom: solid 1px #d2d2d2;}

.chart-container {
	.chart-selector {
		background-color: $brand-secondary !important;
	}
	.chart-content {
		background-color: $white;
	}
	md-card{
		margin-top:20px; padding: 0;
		border: solid 1px #d6d6d6;
		md-card-title{
			background-color: $light-grey;
			padding: 10px;text-align: center;font-size: 16px;
			border-bottom: solid 1px #d6d6d6;
		}
	}
}

.product-container{
	margin-top: 20px;border: solid 1px #d6d6d6;
	.title{
		background-color: $light-grey;
		padding: 10px;text-align: center;font-size: 16px;
		border-bottom: solid 1px #d6d6d6;
	}
	md-card{padding:0 0 20px;margin:20px; border: solid 0.5px #d6d6d6;
		md-card-title{background-color: $brand-primary;color:$white;font-weight: 500;padding: 10px;font-size: 18px;};
		md-card-content{padding:5px 20px;}
		button.invest-button{
			margin: 10px 0 20px;
			&:hover{background-color: $brand-secondary;}
		};
	}
	i{margin-bottom: 10px;}
}


