@import "../../../styles/partials/web-partials";

.top-performer-container{
  @include dropElement(1s, ease-out, 0s, 1, -100%, 0);
  border: solid 1px #d6d6d6;
  .title{
    background-color: $light-grey;
    padding: 10px;font-size: 16px;
  }
  .content{
    padding: 15px 5px;
    table{
      width:100%;
      border-collapse:collapse;
      td{text-align: start; font-size: 10px}
      tbody  {
        tr{height: 30px;}
        tr:nth-child(odd){background-color: $light-grey;}
      }
    }
    .details{
      width: 100%;
      border-left: solid 0.5px $medium-grey;
      padding-left:10px;
      margin-left: 10px;
      .name{
        font-size: 10px;
        max-width: 120px;
      }
      .rating{
        i.material-icons.star{
          font-size: 14px !important;
        }
      }
      .ring{
        height: 50px;
        width: 50px;
        text-align: center;
        padding: 20px;
        border-radius: 50%;
        border: solid 7px $brand-secondary;
        .percentage{
          font-size: 20px;
          font-weight: 500;
          color: #636161;
        }
        .field{
          font-size: 10px;
          color: #b0b0b0;
        }
        .category{
          font-size: 12px;
          color: #636161;
        }
      }
    }
  }
}
.truncate{
  white-space: nowrap;
  overflow-x: hidden;
  text-overflow: ellipsis;
  max-width:150px;
}
.clickable{
  cursor: pointer;
}
.dataUnavailable{
  color:$error;
  text-align: center;
}
