@import "../../public/styles/partials/web-partials";

.pending-action-container{
	@include dropElement(1s, ease-out, 0s, 1, -100%, 0);
	margin-bottom: 20px;
	padding: 20px;
	background-color: $light-grey;
	.status-card{
		 margin-bottom: 20px;
		.card-title{
			border:solid 1px #d6d6d6;
			line-height: 40px;
			font-weight: 600;
			color:#4e4e4e;
			background-color: $medium-grey;
		}
		.card-content{
			background-color: $white;
			padding: 15px 30px;
			.title{
				font-size: 14px;
				padding: 5px;
				margin-left: 17px;
			}
			.details{
				color: $error;
			}
			.action-button{

			}
		}
	}
}

.portfolio-box{
	@include dropElement(1s, ease-out, 0s, 1, -100%, 0);
	padding: 20px 100px;
	background-color: $light-grey;
	.card-title{
		border:solid 1px #d6d6d6;
		line-height: 50px;font-weight: 600;
		color:$white;
		background-color: $brand-secondary;
	}
	.card-value{
		border:solid 1px #d6d6d6;
		line-height: 70px;font-weight: 600; font-size: 18px;
		border-top:none;
		background-color: $white;
		color:$brand-secondary;
	}
	.clckable{
		cursor: pointer;
	}
}
.portfolio-heading{
	@include heading(36px, 300);
	letter-spacing:1.8px;
	margin-bottom: 30px;
	span{
		padding-bottom: 5px;  border-bottom:solid 1px #4d4c4c;
	}
}
.portfolio-card-container>div {
	margin: 0 30px;
}
.chart-container {
	margin-bottom: 20px;
	.chart-selector {
		/*background-color: #F2F2F2 !important;*/
	}
	.chart-content {
		background-color: $white;
	}
	.md-tab-header{
		background-color: #F2F2F2 !important;
		max-width: 322px;
	}
