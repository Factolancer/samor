@import "../../styles/partials/web-partials";

.checkout {

  .checkout-product-item {
    padding: 0;
    margin: 0 0 20px 0;

    .head {
      background-color: $brand-secondary;
      color: $white;
      font-size: 16px;
      padding: 15px;

      .product-tag {
        color: $white;
        font-size: 10px;
        border: solid 1px $white;
        border-radius: 5px;
        padding: 1px 5px;
        margin: 0 0 0 10px;
      }

      .remove-btn {
        color: $white;
        border: none;
        font-size: 16px;
      }
    }

    .body {
      color: $text-dark-grey;
      padding: 15px;
    }

    .amount {
      font-weight: 700;
      background-color: $light-grey;
      color: $text-dark-grey;

      .disclaimer-text {
        padding: 0 15px;
        font-style: italic;
        font-size: 12px;
        font-weight: 300;
        color: $text-dark-grey;
      }
    }

  }

  .checkout-footer {
    padding: 0;
    margin: 20px 0;
    border: none;
    color: $text-dark-grey;

    .total-inv-checkout {
      padding: 20px 30px;
      font-weight: 700;
      background-color: $light-grey;
      color: $text-dark-grey;
      font-size: 16px;
      text-align: right;

      span {
        color: $brand-secondary;
      }
    }

    .field {
      .field-label {
        line-height: 30px;
        font-weight: bold;
      }
    }
  }

  .field {
    .dropdown-label {
      line-height: 30px;
    }

    .input-label {
      line-height: 30px;
      margin-top: 1em;
    }

    .additional-lumpsum{
        height: 16px;
        margin: 0 0.5em;
    }
  }

  /deep/ .mat-select {
    width: 100%;

    .mat-select-trigger {
      font-size: 14px;
    }
  }

  /deep/ .mat-select-panel {
    .mat-select-content {
      .mat-option {
        .line {
          font-size: 14px;
          line-height: 24px;
        }
      }
    }
  }
}

.summary {

  .link {
    color: $brand-secondary;
  }

  .section {
    margin: 10px 0;

    &:last-of-type {
      margin-top: 20px;
    }

    .section-title {
      line-height: 18px;
      color: $white;
      background-color: $medium-grey;
      font-size: 16px;
      padding: 5px;
    }

    .sip-disclaimer-text {
      padding: 10px 0;
      font-style: italic;
      font-size: 12px;
      font-weight: 400;
      color: $text-dark-grey;
    }
  }

  .fund-list-title {
    background-color: $brand-secondary;
    color: $white;
    font-size: 14px;
    padding: 10px 10px;
    text-align: center;
  }

  .fund-list-body {
    color: $text-dark-grey;
    font-size: 14px;
    padding: 10px 10px;
    text-align: center;
.additional-lumpsum{
    height:16px;
}

    .plan-option {
      font-size: 12px;
      color: $text-dark-grey;
      font-weight: 400;
      span {
        color: $text-medium-grey;
        padding: 0 10px 0 0;
      }
    }

    .name {
      text-align: left;
    }

  }

  .investor-details {
    margin: 40px 0 0 0;

    .head {
      background-color: $medium-grey;
      color: $white;
      padding: 10px 0;
      text-align: center;
      font-size: 16px;
    }

    .body {
      padding: 10px 10px;
      font-size: 14px;

      .key {
        color: $text-dark-grey;
        padding: 10px 10px;
        font-weight: 700;
      }

      .value {
        color: $text-medium-grey;
        padding: 10px 10px;

        .line-2 {
          color: $text-medium-grey;
          font-size: 12px;
        }
      }

    }
  }

  .investment-amount {

    .right {
      background-color: $brand-secondary;
      color: $white;
      font-size: 18px;
      padding: 20px 10px;
      text-align: center;
      font-weight: 700;
    }

    .left {
      color: $text-dark-grey;
      font-size: 14px;
      padding: 20px 10px;
      font-weight: 700;
    }
  }

  .agreement {
    font-size: 12px;
    color: $text-dark-grey;
    font-weight: 700;

    md-checkbox {
      font-size: 12px;
      /deep/ .mat-checkbox-layout {

        padding: 2px 0;

        .mat-checkbox-inner-container {
          height: 15px;
          width: 15px;

          .mat-checkbox-frame {
            border: 2px solid;
          }
        }

        .mat-checkbox-label {
          line-height: 15px;
        }
      }
    }
  }

  .ip-time {
    font-size: 10px;
    color: $text-dark-grey;
    text-align: right;
  }

  .payment-card{

    .payment-info{

        padding: 10px 0px;
        border-bottom: 1px solid $text-dark-grey;
    .info-heading{
        margin-bottom: 5px;
        font-size: 24px;
        font-weight: 700;
        color: $text-dark-grey;
    }
    .info-sub-heading{
        color:$text-medium-grey;
    }
    .beneficiary{
        color: $brand-secondary ;
        font-weight: 700;
    }
    }
    .bank-header{
        border-bottom: 1px solid $text-dark-grey;
    }
    .payment-footer{
        background-color: $medium-grey;
        color: $text-dark-grey;
        font-weight: 700;
        .payment-text{
            font-size: 16px;
        }
    }
    .account-details{
        color: $text-dark-grey;
        font-weight: 700;
    }
    .details-value{
        color: $text-dark-grey;
    }
    }
  .disclaimer {
    padding:24px 24px 5px 24px;
    .title {
      font-size: 14px;
      color: $text-dark-grey;
      border-bottom: 1px solid $text-dark-grey;
    }

    .body-text {
      font-size: 10px;
      color: $text-medium-grey;
      padding: 10px 20px 10px 0px;
        .read-more{
            &:hover {
                 color: $brand-secondary;
             }
        }
    }
  }

  .back-button {
    color: $text-medium-grey;

    &:hover {
      color: $text-dark-grey;

      .icon {
        background-color: $light-grey;
      }
    }

    .icon {
      border-radius: 50%;
      margin: auto;
      width: 20px;
      height: 20px;
      text-align: center;
    }

    .text {
      font-size: 12px;
      padding: auto;
      margin: auto;
    }

  }

}

.confirmation {

  padding: 50px 0;
  color: $text-dark-grey;

  .head {
    background-color: $light-grey;
    font-size: 18px;
  }

  .body {

    padding: 10px 0 30px 0;
    text-align: center;
    color: $text-medium-grey;

    .table-head {
      padding: 15px 20px 10px 40px;
      font-weight: 700;
      border-bottom: solid 1px $text-dark-grey;
    }

    .table-body {
      padding: 10px 20px 10px 40px;

      .plan-option {
        font-size: 12px;
        color: $text-dark-grey;
        span {
          color: $text-medium-grey;
          padding: 0 10px 0 0;
        }
      }

      .success-msg {
        color: $success;
      }

      .failed-msg {
        color: $error;
      }
    }
  }

  .foot {
    background-color: $dark-grey;
    color: $white;
    font-size: 18px;
    text-align: center;
    padding: 15px 0;

    .small-line {
      font-size: 14px;
    }
  }

}

.order-ack {
  color: $text-dark-grey;

  .title {
    font-size: 18px;
    letter-spacing: 2px;
    padding: 10px 0;
    font-weight: 700;
  }

  .print {
    font-size: 12px;
    font-weight: 300;
    text-align: right;
    padding: 10px 0;
  }

  .head {
    background-color: $light-grey;
    font-size: 14px;
    padding: 20px 10px;
    color: $text-dark-grey;
    font-weight: 700;
  }

  .body {
    text-align: center;
    color: $text-medium-grey;

    .table-head {
      padding: 10px 20px;
      background-color: $dark-grey;
      color: $white;
      font-weight: 700;
    }

    .table-body {
      padding: 30px 20px;
      border-bottom: solid 1px $text-dark-grey;
      text-align: left;
      line-height: 18px;

      .plan-option {
        font-size: 12px;
        color: $text-dark-grey;
        span {
          color: $text-medium-grey;
          padding: 0 10px 0 0;
        }
      }

      &:last-of-type {
        border-bottom: none;
      }
    }

    .success-msg {
      color: $success;
      font-size: 12px;
      font-weight: 700;
    }

    .failed-msg {
      color: $error;
      font-size: 12px;
      font-weight: 700;
    }
  }

  .disclaimer {
    font-size: 10px;
    font-style: italic;
    color: $text-medium-grey;
    padding: 20px 0;
  }

}
.res-table{
  white-space: nowrap;
  max-width: 100vw !important;
  overflow-x: scroll;
}
.overlay{opacity: 0.5;}
.res-table > div{display: inline-block !important;text-align: left !important;}
.shake{
  @include shake();
}
