md-input{
    width: 90%;
}

md-grid-tile{
    display: block;
}

figure{
    display: block !important;
}

section{
     width: 45%;
     align-self: center;
     margin: auto;
 }

 select{
     width: 90%;
     height: 25%;
 }

.material-icons.md-dark { color: rgba(0, 0, 0, 0.54); }
.material-icons.md-dark.md-inactive { color: rgba(0, 0, 0, 0.26); }
.material-icons.blue600{ color: #337ab7; }
.material-icons.md-light { color: rgba(255, 255, 255, 1); }
.material-icons.md-light.md-inactive { color: rgba(255, 255, 255, 0.3); }

 .errorMessage {
     position: relative;
 }
 .errorMessage span {
     position: absolute;
     color: red;
     top: -10px;
     font-size:0.63em;
 }

 .button-list-margins {
     margin-bottom: 5%;
     margin-top: -5%;
 }

 
 .field_label{
     color: rgba(0, 0, 0, 0.38);
     display: block;
     font-family: Roboto, "Helvetica Neue", sans-serif;
     text-align: left;
     font-size: 14px;
     font-weight: bold;
     margin-bottom: 5px;
     line-height: 20px;
     position: absolute;
     text-align: left;
 }
