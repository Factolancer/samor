@import "../../../styles/styles";

.my-account, .personalised-offers, .quick-links, .report{
  margin-bottom: 20px;
  table{border-collapse: collapse;}
  border: solid 1px $medium-grey;
  .highlight{ background-color: $light-grey; color: $dark-grey; padding: 12px; font-weight: 600}
}
.personalised-offers, .quick-links, .report{
  td {
    padding: 8px 20px;
    a {
      color: $dark-grey
    }
  }
}
.report, .quick-links {
  .links{cursor: pointer;}
}
.my-account-m, .report-m,.quick-links-m{
  margin-bottom: 20px;
  .links{
    opacity: 0.5 !important;
  }
}

.my-account .links{
  margin: 5px auto;
  cursor: pointer;
  img{
    height: 25px;
    width:25px;
    opacity: 0.6;
    &:hover{opacity: 1;}
  }
  span{
    color:$dark-grey;
    border-bottom:solid 1px #d2d2d2;
    margin-left:5px; line-height:30px; font-size: 14px;
  }
}
.my-account {
  tr:last-child{
    span{border-bottom: none !important;}
  }
}

.report{
  img{opacity: 0.6}
}

.rotate{
  transition:all 0.25s ease-in;
  @include rotate(180deg);
}

