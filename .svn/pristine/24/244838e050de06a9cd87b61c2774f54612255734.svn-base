@import "../../styles/partials/web-partials";

.portfolio-allocation-heading{
    margin-top: 25px;
    margin-bottom:15px ;
}
.report-card{
    width:99%;
}
.download-icon{
    color:$dark-grey;
}
.allocation-header{
    color:$brand-primary;
    font-weight: 700;
}
.summary-heading{
    color:$text-dark-grey;
    font-weight: 700;
    padding: 30px 0px 20px 0px;
    text-align: center;
}
.mar-r-1{
    margin-right: 1%;
}
.allocation-heading {
    padding: 30px 0px 20px 30px;
    font-weight: 700;
}
.allocation-details{
    padding: 30px 0px 20px 30px;

}
.total{
    color:$text-dark-grey;
    font-weight: 700;
}
.iir_total{
    color: $text-dark-grey;
    font-weight: 700;
    font-size: 16px;
}
.summary-details{
    color:$text-dark-grey;
    font-weight:700;
}
.md-text-head{
    color:$text-medium-grey;
    font-weight:700;
}
.md-text-col{
    color:$text-medium-grey;
    font-weight:400;
}
.font-16{
    font-size: 16px !important;
}
.font-10 {
    font-size: 10px !important;
}
.asset-class{
    color:$text-dark-grey;
    font-weight: 700;
}
.asset-class-details{
    color:$text-dark-grey;
}
.summary-card1{
    background-color: $light-grey;
    padding: 10px 0px;
}
.error{
    color:$error;
}
.lastRow {
    background-color: $medium-grey;
    font-weight:700;
}
.total-allocation-details{
    color:$text-dark-grey;
    font-weight: 700;
}
.tableHeader{
    background-color: $light-grey;
}
.pieChartLayout{
    width: 100%;
    height:400px;
}
i{
    font-size: 0.8em;
}
.fundName{
    color:$brand-secondary;
    cursor: pointer;
}
.mar-b-20{
    margin-bottom: 20px;
}
.brd-r{
    border-right:1px solid $dark-grey;
}
.brd-l{
    border-left:1px solid $dark-grey;

}
.increase{
    color:green;
    font-weight:700;
}
.decrease{
    color:red;
    font-weight:700;
}
.upArrow{
    font-size:14px;
    width:14px;
    height:14px;
    font-weight:700;
    color:green;
}
.downArrow{
    font-size:14px;
    width:14px;
    height:14px;
    font-weight:700;
    color:red;
}
.reportHeader {
    font-weight: 700;
    font-size: 32px;
}
.graph-box {
    border: solid 1px $medium-grey;
    width: 100%;
    margin: 30px 0;

    .highlight {
        background-color: $light-grey;
        color: $text-dark-grey;
        padding: 15px 0;
        text-align: center;
        border-bottom: solid 1px $medium-grey;
        font-weight: 700;
    }

    .graph {
        padding: 5px;
    }
}

.focus:hover{
    .asset-class{
        color:$brand-primary;
        font-weight: 700;
    }
    .asset-class-details{
        color:$brand-primary;
    }
    background-color: $light-grey;
}