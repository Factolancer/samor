<div class="col-md-6 col-md-offset-3">
    <div>
        <md-grid-list cols="2" rowHeight="80px">
            <md-grid-tile [colspan]="2">
                Product Details >> Fund Selection >> Investment Portfolio >> Summary & Checkout
            </md-grid-tile>
            <md-grid-tile [colspan]="2"  [ngClass]="{screenheading: headingvisible}" class="step">
                {{headingarray[index]}}
            </md-grid-tile>
            <md-grid-tile [rowspan]="6" style="border-right: 2px solid;">
                <div class="col-md-9" style="margin: auto">
                    <md-card>
                        <!-- <md-card-header>-->
                        <md-card-subtitle></md-card-subtitle>
                        <md-card-title style="font-size: 26px">
                            <table class="table-title">
                                <tr>
                                    <td class="td-icon" align="right">
                                        <i class="material-icons" style="font-size: xx-large">stars</i>
                                    </td>
                                    <td align="left">
                                        SavingsPlus
                                    </td>
                                </tr>
                            </table>
                        </md-card-title>
                        <!-- </md-card-header>-->
                        <md-card-content style="background-color: lightgray; font-size: 15px">
                            <table>
                                <tr>
                                    <td class="td-icon">
                                        <i class="material-icons">trending_up</i>
                                    </td>
                                    <td>
                                        Higher returns as compared to Savings and
                                        Deposits&nbsp;&nbsp;(~7-9%)
                                    </td>
                                </tr>
                                <tr>
                                    <td class="td-icon">
                                        <i class="material-icons">update</i>
                                    </td>
                                    <td>
                                        Same day redemption
                                    </td>
                                </tr>
                                <tr>
                                    <td class="td-icon">
                                        <i class="material-icons">lock_open</i>
                                    </td>
                                    <td>
                                        No lock-in or exit load
                                    </td>
                                </tr>
                                <tr>
                                    <td class="td-icon">
                                        <i class="material-icons">check_box</i>
                                    </td>
                                    <td>
                                        Invest and redeem on a click!
                                    </td>
                                </tr>
                            </table>
                        </md-card-content>
                    </md-card>
                </div>
            </md-grid-tile>
            <md-grid-tile [rowspan]="3">
                <div class="col-md-9" style="margin-top: 90px; margin-bottom: 0; width: 80% ">
                    <md-card>
                        <!-- <md-card-header>-->
                        <md-card-subtitle></md-card-subtitle>
                        <md-card-title>
                            <table class="table-title">
                                <tr>
                                    <td class="td-icon" align="right">
                                        <i class="material-icons">account_balance</i>
                                    </td>
                                    <td align="left">
                                        Savings Account
                                    </td>
                                </tr>
                            </table>
                        </md-card-title>
                        <!-- </md-card-header>-->
                        <md-card-content>
                            <ul>
                                <li>Low interest rate (~4%)</li>
                                <li>High taxation</li>
                                <li>Insured only upto 1 lac</li>
                                <li>Account maintenance charges</li>
                            </ul>
                        </md-card-content>
                    </md-card>
                </div>
            </md-grid-tile>
            <md-grid-tile [rowspan]="3">
                <div class="col-md-9" style="margin-top: -40px; width: 80%">
                    <md-card>
                        <!-- <md-card-header>-->
                        <md-card-subtitle></md-card-subtitle>
                        <md-card-title>
                            <table class="table-title" style="width: 120%">
                                <tr>
                                    <td class="td-icon" align="right">
                                        <i class="material-icons">lock</i>
                                    </td>
                                    <td align="left">
                                        Term Deposits
                                    </td>
                                </tr>
                            </table>
                        </md-card-title>
                        <!-- </md-card-header>-->
                        <md-card-content>
                            <ul>
                                <li>Short term rates(<1 month) very low</li>
                                <li>Early withdrawal penalty</li>
                                <li>Rate changes on withdrawal</li>
                                <li>Small amounts earn lower interest</li>
                            </ul>
                        </md-card-content>
                    </md-card>
                </div>
            </md-grid-tile>
            <md-grid-tile [colspan]="2">
                <button md-raised-button (click)="toDemo()" style="float: right; width: 20%" color="primary">See How It Works!</button>
                &nbsp;
                <button md-raised-button (click)="toFunds()" style="float: right; width: 20%" color="primary">Invest</button>
            </md-grid-tile>
        </md-grid-list>
    </div>
</div>


<section class="col-md-8 col-md-offset-2">
    <div>
        <div class="col-md-3">

        </div>

        <div class="col-md-3">

        </div>

        <div class="col-md-3">

        </div>

        <br/>

    </div>

</section>


