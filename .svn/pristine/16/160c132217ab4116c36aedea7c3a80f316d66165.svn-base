@import "../../styles/partials/web-partials";

.cart-product-head {
  background-color: $brand-secondary;
  color: $white;
  font-size: 14px;
  font-weight: 700;
  margin-bottom: 5px;
  border-radius: 0;
  padding: 15px;
}

.cart-product {
  margin-bottom: 25px;
}

.cart-product-divider {
  border-color: $dark-grey;
  padding: 5px 0;
}

.cart-product-item {
  background-color: $white;
  border-radius: 0;
  color: $black;
  padding: 15px;

  .fund {
    padding: 10px 0;
  }

  .product-tag {
    color: #BFBFBF;
    font-size: 10px;
    border: solid 1px #BFBFBF;
    border-radius: 5px;
    padding: 1px 5px;
  }
}

.remove-btn {
  color: $black;
  background-color: $white;
  border: none;
  font-size: 16px;
  outline-style: none;

  &:hover {
    color: $brand-secondary;
  }
}

.add-funds {
  color: $brand-secondary;
  font-size: 12px;
  padding: 0;
}

.cart-nav {
  position: relative;

  .count {
    position: absolute;
    background-color: #60b3D4;
    color: #FFFFFF;
    height: 15px;
    line-height: 15px;
    width: 15px;
    border-radius: 50%;
    right: 0;
    font-size: 10px;
  }
}

/deep/ .mat-select {
  width: 80%;

  .mat-select-trigger {
    font-size: 14px;
  }
}

.no-funds {
  img{max-width: 50vw;}
  .text {
    font-size: 42px;
    color: $text-dark-grey;
    letter-spacing: 2px;
    text-align: center;
    span {
      color: $brand-secondary;
    }
  }
}
.bor-b-1-gray:not(:last-child){
  border-bottom:1px solid #53add0;
}