//***********************IMPORTS********************************
@import url('https://fonts.googleapis.com/icon?family=Material+Icons');
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,700');
@import 'partials/web-partials';
@import "fincash-blue";
@import "web";


//***********************MATERIAL ICONS SIZES********************************

.factsheet-icon {
  color: $brand-secondary;
}

// Rules for using icons as black on a light background.
.material-icons {
  vertical-align: middle;

  &.md-dark {
    color: rgba(0, 0, 0, 0.54);
    &.md-inactive {
      color: rgba(0, 0, 0, 0.26);
    }
  }

  &.md-light {
    color: rgba(255, 255, 255, 1);
    .md-inactive {
      color: rgba(255, 255, 255, 0.3);
    }
  }

  &.md-brand-secondary {
    color: $brand-secondary;
  }
}

@for $i from 1 to 6 {
  .material-icons.md-#{8 + ($i*2)} {
    font-size: 8px + ($i*2);
    height: 8px + ($i*2);
    width: 8px + ($i*2);
  }
}

@for $i from 1 to 4 {
  .material-icons.md-#{12 * ($i+1)} {
    font-size: 12px * ($i+1);
    height: 12px * ($i+1);
    width: 12px * ($i+1);
  }

}

//***********************ALIGN********************************
.left-align {
  text-align: left;
}

.right-align {
  text-align: right;
}

.center-align {
  text-align: center;
}

.float-right {
  float: right;
}

//***********************padding & margins********************************

.no-padding {
  padding: 0 !important;
}

.no-margin {
  margin: 0 !important;
}

.no-border {
  border: none !important;
  border-radius: 0 !important;
  border-collapse: inherit;
}

@for $i from 1 to 16 {
  .pad-#{5 * $i} {
    padding: 5px * $i !important;
  }

  .pad-tb-#{5 * $i} {
    padding-top: 5px * $i !important;
    padding-bottom: 5px * $i !important;
  }

  .pad-lr-#{5 * $i} {
    padding-left: 5px * $i !important;
    padding-right: 5px * $i !important;
  }

  .mar-#{5 * $i} {
    margin: 5px * $i !important;
  }

  .mar-tb-#{5 * $i} {
    margin-top: 5px * $i !important;
    margin-bottom: 5px * $i !important;
  }

  .mar-lr-#{5 * $i} {
    margin-left: 5px * $i !important;
    margin-right: 5px * $i !important;
  }

  .mar-t-#{5 * $i}{
    margin-top: 5px * $i !important;
  }

  .mar-b-#{5 * $i}{
    margin-bottom: 5px * $i !important;
  }
}

//***********************CTA********************************

.cta-70 {
  @include cta(70px);
}

.cta-50 {
  @include cta(50px);
}

.cta-36 {
  @include cta(36px);
}

.hollow-cta-36 {
  @include hollow-cta(36px);
}

//***********************HEADING********************************

.heading-32-blue {
  @include heading(32px, 300);
  color: $brand-primary;
}

.heading-32-black {
  @include heading(32px, 300);
  color: $black;
}

.heading-24 {
  @include heading(24px, 400);
}

.heading-24-white {
  @include heading(24px, 400);
  color: $white;
}

.heading-18-blue {
  @include heading(18px, 400);
  color: $brand-primary;
}

.heading-18-black {
  @include heading(18px, 400);
  color: $black;
}

.heading-16 {
  @include heading(16px, 400);
}

.heading-14 {
  @include heading(14px, 700);
}

.heading-12 {
  @include heading(12px, 700);
}

.border-radius-zero {
  border-radius: 0;
}

body{
  font-family: $font-stack;
  font-size:14px;
  max-width:2000px;
  margin:0 auto;
  padding:0;
}
a,a:hover,a:active,a:focus,a:visited{
  text-decoration:none;color:#fff;
}