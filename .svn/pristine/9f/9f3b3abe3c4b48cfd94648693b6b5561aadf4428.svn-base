@import "../../styles/partials/web-partials";

.section-header-expanded {
  background-color: $brand-secondary;
  color: $white;
  @include heading(18px, 500);
  width: 100%;
  line-height: 50px;
}

.section-header-collapsed {
  background-color: $light-grey;
  color: $dark-grey;
  @include heading(16px, 500);
  width: 100%;
  line-height: 50px;
}

md-icon{
  cursor: pointer;
  font-size: 28px;
}

.cursor-pointer {
  cursor: pointer;
}

.section-content {
  background-color: $white;
  width: 100%;
  border: 0.5px solid $medium-grey;
}

md-input-container{
  width: 90%;
}

md-radio-button {
  color: $medium-grey;
  padding-right: 5px;
  padding-left: 2px;
  //font-size: 12px;
  //align-items: center;
}

md-radio-label {
  align-items: center;
}

md-radio-outer-cicle {
  height: 15px;
  width: 15px;
}


.errorMessage {
  float: right;
  margin-top: 1px;
  font-size: 0.7em;
  color: $error;

}
.errorMessage span {
  position: absolute;
  color: red;
  top: -10px;
  font-size:0.63em;
}

.field_label{
  color: rgba(0, 0, 0, 0.38);
  display: block;
  text-align: left;
  @include heading(11px, 300);
  line-height: 20px;
  position: absolute;
  text-align: left;
  margin-bottom: 5px;
  //margin-left: -105px;
  margin-top: -20px;
  padding-bottom: 5px;
}

.address-header{
  color: $dark-grey;
  @include heading(16px, 400);
  margin-left: 50px;
}

input[type=date]{
  color: $medium-grey;
}
